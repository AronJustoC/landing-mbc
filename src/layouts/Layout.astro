---
import "../styles/global.css";
import WasapBall from "../components/shareComponents/wasapBall.astro";
import HeaderContainer from "../components/HeaderContainer.astro";
import Footer from "../components/footer.astro";
import StructuredData from "../components/StructuredData.astro";

interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonical?: string;
	type?: "website" | "article";
	noindex?: boolean;
	simpleLayout?: boolean;
}

const {
	title = "MBC | Mantenimiento Predictivo & Ingeniería",
	description = "Especialistas en Mantenimiento Predictivo e Ingeniería en Cusco. Servicios de análisis vibracional, termografía, ultrasonido y alineamiento láser para optimizar la confiabilidad de su industria.",
	image = "/og-image.jpg",
	canonical,
	type = "website",
	noindex = false,
	simpleLayout = false,
} = Astro.props;

// Default canonical URL based on current pathname
const getCanonicalUrl = () => {
	if (canonical) return canonical;

	const siteUrl = Astro.site?.href || "https://mbcpredictive.com";
	const pathname = Astro.url?.pathname || "/";
	return siteUrl.replace(/\/$/, "") + pathname;
};

const finalCanonical = getCanonicalUrl();

const fullTitle = title.includes("MBC") ? title : `${title} | MBC`;

const siteUrl = Astro.site?.href || "https://mbcpredictive.com";
const fullImage = image.startsWith("http") ? image : `${siteUrl}${image}`;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />

		<!-- Canonical URL -->
		<link rel="canonical" href={finalCanonical} />

		<!-- SEO Principal -->
		<title>{fullTitle}</title>
		<meta name="description" content={description} />
		<meta
			name="keywords"
			content="mantenimiento predictivo, cusco, ingeniería, análisis vibracional, termografía, ultrasonido, alineamiento láser, balanceo dinámico, industria 4.0"
		/>
		<meta name="author" content="MBC" />
		<meta
			name="robots"
			content={noindex ? "noindex, nofollow" : "index, follow"}
		/>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={finalCanonical} />
		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={fullImage} />
		<meta property="og:site_name" content="MBC" />
		<meta property="og:locale" content="es_PE" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={finalCanonical} />
		<meta property="twitter:title" content={fullTitle} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={fullImage} />

		<!-- Schema.org Structured Data -->
		<StructuredData type="localbusiness" />
		<StructuredData type="organization" />
		<StructuredData type="website" />
	</head>
	<body>
		{!simpleLayout && <HeaderContainer />}
		<slot />
		{!simpleLayout && <Footer />}
		{!simpleLayout && <WasapBall />}
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
