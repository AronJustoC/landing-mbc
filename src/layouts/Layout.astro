---
import "../styles/global.css";
import WasapBall from "../components/shareComponents/wasapBall.astro";
import HeaderContainer from "../components/HeaderContainer.astro";
import Footer from "../components/footer.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO Principal -->
		<title>MBC Predictive | Mantenimiento Predictivo & Ingeniería</title>
		<meta
			name="description"
			content="Especialistas en Mantenimiento Predictivo e Ingeniería en Cusco. Servicios de análisis vibracional, termografía, ultrasonido y alineamiento láser para optimizar la confiabilidad de su industria."
		/>
		<meta
			name="keywords"
			content="mantenimiento predictivo, cusco, ingeniería, análisis vibracional, termografía, ultrasonido, alineamiento láser, balanceo dinámico, industria 4.0"
		/>
		<meta name="author" content="MBC Predictive" />
		<meta name="robots" content="index, follow" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://mbcpredictive.com/" />
		<meta
			property="og:title"
			content="MBC Predictive | Expertos en Confiabilidad Industrial"
		/>
		<meta
			property="og:description"
			content="Soluciones avanzadas de ingeniería y mantenimiento predictivo en Cusco. Maximizamos la vida útil de sus activos."
		/>
		<meta
			property="og:image"
			content="https://mbcpredictive.com/og-image.jpg"
		/>

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://mbcpredictive.com/" />
		<meta
			property="twitter:title"
			content="MBC Predictive | Mantenimiento Predictivo"
		/>
		<meta
			property="twitter:description"
			content="Especialistas en Mantenimiento Predictivo e Ingeniería. Análisis vibracional, termografía y más."
		/>
		<meta
			property="twitter:image"
			content="https://mbcpredictive.com/og-image.jpg"
		/>
	</head>
	<body>
		<HeaderContainer />
		<slot />
		<Footer />
		<WasapBall />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
