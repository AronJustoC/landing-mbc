---
import Layout from "../layouts/Layout.astro";
import SectionHero from "../components/SectionHero.astro";
import contactHeaderBg from "../assets/headers/contact_header_background.png";
import { Icon } from "astro-icon/components";

const sitemapData = [
    {
        category: "Páginas Principales",
        links: [
            { name: "Inicio", href: "/", icon: "lucide:home" },
            { name: "Nosotros", href: "/about", icon: "lucide:users" },
            { name: "Servicios", href: "/services", icon: "lucide:cog" },
            { name: "Contacto", href: "/contact", icon: "lucide:mail" },
            { name: "Acceso Clientes", href: "/login", icon: "lucide:lock" },
        ],
    },
    {
        category: "Servicios Especializados",
        links: [
            {
                name: "Mantenimiento Predictivo",
                href: "/servicios/mantenimiento-predictivo",
                icon: "lucide:activity",
            },
            {
                name: "Ingeniería de Confiabilidad",
                href: "/servicios/ingenieria-confiabilidad",
                icon: "lucide:bar-chart-3",
            },
            {
                name: "Análisis Dinámico",
                href: "/servicios/analisis-dinamico",
                icon: "lucide:zap",
            },
            {
                name: "Evaluación Estructural",
                href: "/servicios/evaluacion-estructural",
                icon: "lucide:building-2",
            },
            {
                name: "Monitoreo de Activos",
                href: "/servicios/monitoreo-activos",
                icon: "lucide:cpu",
            },
            {
                name: "Soporte Técnico",
                href: "/servicios/soporte-tecnico",
                icon: "lucide:wrench",
            },
        ],
    },
    {
        category: "Legal y Soporte",
        links: [
            {
                name: "Términos y Condiciones",
                href: "/terms",
                icon: "lucide:file-text",
            },
            {
                name: "Política de Privacidad",
                href: "/privacy",
                icon: "lucide:shield",
            },
            {
                name: "Cumplimiento Normativo",
                href: "/compliance",
                icon: "lucide:check-circle",
            },
            { name: "Mapa del Sitio", href: "/sitemap", icon: "lucide:map" },
        ],
    },
];
---

<Layout
    title="Mapa del Sitio | MBC Predictive"
    description="Explora la estructura técnica y de servicios de la plataforma digital de MBC Predictive."
>
    <SectionHero
        title="Mapa del Sitio"
        subtitle="Arquitectura de información y acceso rápido a todos nuestros recursos técnicos."
        image={contactHeaderBg}
        breadcrumbItems={[
            { name: "Inicio", href: "/" },
            { name: "Mapa del Sitio", href: "/sitemap", current: true },
        ]}
    />

    <section class="bg-[#08080A] py-24 relative overflow-hidden">
        <!-- Grid Pattern overlay -->
        <div
            class="absolute inset-0 z-0 opacity-[0.03]"
            style="background-image: linear-gradient(#31B0FF 1px, transparent 1px), linear-gradient(90deg, #31B0FF 1px, transparent 1px); background-size: 50px 50px;"
        >
        </div>

        <div class="container mx-auto px-6 relative z-10">
            <div class="grid md:grid-cols-3 gap-12">
                {
                    sitemapData.map((section) => (
                        <div class="animate-item">
                            <div class="flex items-center gap-3 mb-8">
                                <div class="h-1 w-8 bg-[#31B0FF]" />
                                <h3 class="text-[#31B0FF] font-bold text-[11px] uppercase tracking-[0.4em]">
                                    {section.category}
                                </h3>
                            </div>

                            <ul class="space-y-4">
                                {section.links.map((link) => (
                                    <li>
                                        <a
                                            href={link.href}
                                            class="group flex items-center gap-4 text-gray-400 hover:text-white transition-all duration-300"
                                        >
                                            <div class="w-10 h-10 rounded-lg bg-white/5 flex items-center justify-center group-hover:bg-[#31B0FF]/20 group-hover:text-[#31B0FF] transition-all">
                                                <Icon
                                                    name={link.icon}
                                                    class="w-5 h-5"
                                                />
                                            </div>
                                            <span class="text-base font-light tracking-tight group-hover:translate-x-1 transition-transform">
                                                {link.name}
                                            </span>
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))
                }
            </div>

            <!-- Quick Search / CTA -->
            <div
                class="mt-24 p-12 bg-gradient-to-br from-[#121214] to-[#08080A] border border-white/5 rounded-3xl text-center relative overflow-hidden group"
            >
                <div
                    class="absolute -top-24 -right-24 w-64 h-64 bg-[#31B0FF]/10 rounded-full blur-[80px] group-hover:bg-[#31B0FF]/15 transition-all duration-700"
                >
                </div>

                <h3 class="text-2xl font-bold text-white mb-4 tracking-tight">
                    ¿No encuentras lo que buscas?
                </h3>
                <p class="text-gray-400 font-light mb-8 max-w-xl mx-auto">
                    Si necesitas asistencia técnica personalizada o información
                    sobre un servicio específico que no figura en el mapa,
                    nuestro equipo de soporte está listo para ayudarte.
                </p>
                <a
                    href="/contact"
                    class="inline-flex items-center gap-3 bg-white/5 hover:bg-white/10 text-white px-8 py-4 rounded-xl border border-white/10 transition-all font-bold text-xs uppercase tracking-widest"
                >
                    Contactar Soporte Técnico
                    <Icon name="lucide:arrow-right" class="w-4 h-4" />
                </a>
            </div>
        </div>
    </section>
</Layout>
