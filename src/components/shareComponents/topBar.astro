---
import { Icon } from "astro-icon/components";
---

<div
    id="top-bar"
    class="bg-[#0a0a0c] border-b border-white/10 backdrop-blur-md"
>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
        <div class="flex items-center justify-center md:justify-between py-2">
            <div class="flex items-center gap-6">
                <!-- Phone & Email (Added based on previous context/image) -->
                <div
                    class="hidden md:flex items-center gap-4 text-[10px] sm:text-xs font-medium tracking-wide text-slate-400"
                >
                    <a
                        href="tel:+51966852981"
                        class="flex items-center gap-2 hover:text-white transition-colors"
                    >
                        <Icon name="lucide:phone" class="w-3 h-3" />
                        <span>(+51) 966 852 981</span>
                        <span>(+51) 991 433 399</span>
                    </a>
                    <a
                        href="mailto:info@mbcpredictive.com"
                        class="flex items-center gap-2 hover:text-white transition-colors"
                    >
                        <Icon name="lucide:mail" class="w-3 h-3" />
                        <span>info@mbcpredictive.com</span>
                    </a>
                </div>
            </div>
            <!-- Social Icons -->
            <div class="flex items-center gap-4 md:pl-6 md:ml-2">
                <a
                    href="#"
                    class="text-slate-400 hover:text-[#E4405F] transition-colors transform hover:scale-110"
                    aria-label="Instagram"
                >
                    <Icon name="lucide:instagram" class="w-4 h-4" />
                </a>
                <a
                    href="#"
                    class="text-slate-400 hover:text-[#0077B5] transition-colors transform hover:scale-110"
                    aria-label="LinkedIn"
                >
                    <Icon name="lucide:linkedin" class="w-4 h-4" />
                </a>
                <a
                    href="#"
                    class="text-slate-400 hover:text-[#FF0000] transition-colors transform hover:scale-110"
                    aria-label="YouTube"
                >
                    <Icon name="lucide:youtube" class="w-4 h-4" />
                </a>
            </div>
        </div>
    </div>
</div>