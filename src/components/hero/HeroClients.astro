---
import AnimateItem from "../AnimateItem.astro";
import antaminaLogo from "../../assets/logo-antamina.jpg";
import cerroVerdeLogo from "../../assets/logo-cerro-verde.jpg";
import antapacayLogo from "../../assets/logo-antapacay.png";
import southerLogo from "../../assets/logo-souther.png";
---

<section class="relative py-24 bg-background overflow-hidden">
    {/* Background Glow */}
    <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[1000px] h-[600px] bg-brand/5 blur-[120px] rounded-full pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-6 relative z-10">
        <div class="text-center max-w-4xl mx-auto mb-20">
            <AnimateItem variant="fade-up" delay={0.1}>
                <h2
                    class="text-4xl md:text-6xl font-black text-white mb-8 tracking-tight leading-tight"
                >
                    Experiencia que Impulsa la <br />
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-500"
                        >Gran Minería</span
                    >
                </h2>
            </AnimateItem>

            <AnimateItem variant="fade-up" delay={0.2}>
                <p class="text-gray-400 text-lg md:text-xl leading-relaxed max-w-2xl mx-auto">
                    Nuestro equipo ha desplegado soluciones de ingeniería dinámica y
                    confiabilidad en las operaciones más exigentes del Perú.
                </p>
            </AnimateItem>
        </div>

        <AnimateItem variant="zoom-in" delay={0.3}>
            <div
                class="bg-surface/30 border border-white/5 rounded-[2.5rem] p-8 md:p-12 backdrop-blur-xl relative overflow-hidden group hover:border-brand/20 transition-all duration-700 shadow-2xl"
            >
                <div
                    class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-1000 pointer-events-none"
                >
                </div>

                <div
                    class="flex flex-col lg:flex-row items-center gap-12 justify-between"
                >
                    <div class="text-center lg:text-left shrink-0 max-w-xs">
                        <h3 class="text-3xl font-black text-white mb-3">
                            Nuestros Clientes
                        </h3>
                        <p class="text-gray-400 text-sm leading-relaxed">
                            Empresas líderes que confían en nuestra ingeniería
                            para sus activos críticos.
                        </p>
                    </div>

                    <div
                        class="h-px w-full lg:w-px lg:h-32 bg-gradient-to-r lg:bg-gradient-to-b from-transparent via-white/10 to-transparent"
                    >
                    </div>

                    <div
                        class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12 w-full items-center"
                    >
                        {
                            [
                                { img: antaminaLogo, alt: "Antamina" },
                                { img: cerroVerdeLogo, alt: "Cerro Verde" },
                                { img: antapacayLogo, alt: "Antapacay" },
                                { img: southerLogo, alt: "Southern Peru" },
                            ].map((brand) => (
                                <div class="group/logo flex items-center justify-center transition-all duration-700 grayscale opacity-40 hover:grayscale-0 hover:opacity-100 hover:scale-110">
                                    <img
                                        src={brand.img.src}
                                        alt={brand.alt}
                                        class="h-16 md:h-20 w-auto object-contain bg-white rounded-2xl p-4 shadow-xl group-hover/logo:shadow-brand/30 transition-all duration-700"
                                        loading="lazy"
                                        decoding="async"
                                    />
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </AnimateItem>
    </div>
</section>
