---
import AnimateItem from "../AnimateItem.astro";
import { Icon } from "astro-icon/components";
import logo from "../../assets/logo-1.png";
import pillarMonitoring from "../../assets/hero/pillar-monitoring.png";
import pillarEngineering from "../../assets/hero/pillar-engineering.png";
import pillarData from "../../assets/hero/pillar-data.png";

const PILLARS = [
    {
        title: "Mantenimiento Predictivo",
        description:
            "Monitoreo de condición y seguimiento continuo del desempeño para la detección temprana de fallas en activos críticos.",
        icon: "lucide:activity",
        image: pillarMonitoring,
        alt: "Monitoreo avanzado",
    },
    {
        title: "Ingeniería de Confiabilidad",
        description:
            "Optimización de estrategias de mantenimiento basadas en datos y riesgo para maximizar la disponibilidad y vida útil.",
        icon: "lucide:settings-2",
        image: pillarEngineering,
        alt: "Ingeniería de Confiabilidad",
    },
    {
        title: "Análisis Especializado",
        description:
            "Diagnóstico vibracional, análisis modal y evaluación estructural para infraestructuras industriales complejas.",
        icon: "lucide:database",
        image: pillarData,
        alt: "Análisis Especializado",
    },
];
---

<section
    id="ingenieria-confiabilidad"
    class="relative py-12 md:py-20 lg:py-24 bg-background overflow-hidden"
>
    <!-- Background Glows -->
    <div
        class="absolute top-0 right-0 w-[300px] h-[300px] md:w-[600px] md:h-[600px] bg-brand/5 blur-[150px] rounded-full pointer-events-none"
    >
    </div>
    <div
        class="absolute bottom-0 left-0 w-[300px] h-[300px] md:w-[600px] md:h-[600px] bg-brand/5 blur-[150px] rounded-full pointer-events-none"
    >
    </div>

    <div class="container mx-auto px-6 text-center max-w-6xl relative z-10">
        <!-- Logo -->
        <div class="flex justify-center mb-8">
            <AnimateItem variant="fade-up" delay={0.1}>
                <img
                    src={logo.src}
                    alt="MBC Ingeniería y Confiabilidad"
                    class="h-16 md:h-20 opacity-40 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-700"
                />
            </AnimateItem>
        </div>

        <!-- Título -->
        <AnimateItem variant="fade-up" delay={0.2}>
            <h2
                class="text-white text-3xl sm:text-4xl md:text-6xl font-black tracking-tight mb-8 leading-[1.1]"
            >
                INGENIERÍA Y CONFIABILIDAD <br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-brand to-blue-400 drop-shadow-[0_0_20px_rgba(49,176,255,0.2)]"
                    >EN EL CORAZÓN DE LA INDUSTRIA</span
                >
            </h2>
        </AnimateItem>

        <!-- Descripción -->
        <AnimateItem variant="fade-up" delay={0.3} class="max-w-3xl mx-auto mb-16">
            <p
                class="text-gray-400 text-lg md:text-xl leading-relaxed"
            >
                Transformamos datos complejos de activos críticos en información
                estratégica.
                <span class="text-white font-medium"
                    >Monitoreo avanzado, software a medida e ingeniería de alto
                    nivel</span
                > para garantizar la continuidad operativa.
            </p>
        </AnimateItem>

        <!-- Pilares Grid -->
        <div
            class="grid grid-cols-1 md:grid-cols-3 gap-8 text-left"
        >
            {
                PILLARS.map((pillar, index) => (
                    <AnimateItem variant="fade-up" delay={0.4 + index * 0.1}>
                        <div class="group relative bg-surface/40 backdrop-blur-sm border border-white/5 rounded-3xl overflow-hidden transition-all duration-500 hover:border-brand/30 hover:shadow-[0_0_50px_rgba(49,176,255,0.1)] h-full">
                            <div class="relative h-64 overflow-hidden">
                                <div class="absolute inset-0 bg-background/40 z-10 group-hover:bg-transparent transition-colors duration-700" />
                                <img
                                    src={pillar.image.src}
                                    alt={pillar.alt}
                                    class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-1000"
                                    loading="lazy"
                                />
                            </div>

                            <div class="p-8 relative z-20">
                                <div class="mb-6 flex items-center gap-4">
                                    <div class="p-3 rounded-xl bg-brand/10 text-brand group-hover:bg-brand group-hover:text-background transition-all duration-500 shadow-[0_0_15px_rgba(49,176,255,0.2)]">
                                        <Icon
                                            name={pillar.icon}
                                            class="w-6 h-6"
                                        />
                                    </div>
                                    <div class="h-px flex-1 bg-gradient-to-r from-brand/30 to-transparent" />
                                </div>

                                <h3 class="text-2xl font-black text-white mb-4 group-hover:text-brand transition-colors">
                                    {pillar.title}
                                </h3>
                                <p class="text-gray-400 text-sm leading-relaxed group-hover:text-gray-300 transition-colors">
                                    {pillar.description}
                                </p>
                            </div>
                        </div>
                    </AnimateItem>
                ))
            }
        </div>

        <!-- New 'Services' Button -->
        <div class="flex justify-center mt-16 mb-8">
            <AnimateItem variant="fade-up" delay={0.8}>
                <a
                    href="/services"
                    class="group inline-flex items-center gap-3 px-8 py-4 rounded-full bg-white/5 border border-white/10 hover:bg-brand/10 hover:border-brand/40 transition-all duration-500 backdrop-blur-md shadow-lg"
                >
                    <span
                        class="text-base font-bold text-white group-hover:text-brand transition-colors"
                        >Explorar Nuestros Servicios</span
                    >
                    <Icon
                        name="lucide:arrow-right"
                        class="w-5 h-5 text-gray-400 group-hover:text-brand group-hover:translate-x-1 transition-transform"
                    />
                </a>
            </AnimateItem>
        </div>
    </div>
</section>
