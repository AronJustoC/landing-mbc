---
import { Icon } from "astro-icon/components";
import LogoMbc from "../assets/logo-1.png";

const services = [
  { name: "Mantenimiento Predictivo", href: "/services#predictive" },
  { name: "Ingeniería de Confiabilidad", href: "/services#reliability" },
  { name: "Análisis Dinámico", href: "/services#dynamic" },
  { name: "Evaluación Estructural", href: "/services#structural" },
  { name: "Monitoreo de Activos", href: "/services#monitoring" },
  { name: "Soporte Técnico", href: "/services#support" },
];

const company = [
  { name: "Sobre Nosotros", href: "/about" },
  { name: "Misión y Visión", href: "/about#mision-vision" },
  { name: "Nuestro Equipo", href: "/about#team" },
  { name: "Contacto", href: "/contact" },
];

const legal = [
  { name: "Términos y Condiciones", href: "/legal/terms" },
  { name: "Política de Privacidad", href: "/legal/privacy" },
  { name: "Cumplimiento Normativo", href: "/legal/compliance" },
  { name: "Mapa del Sitio", href: "/sitemap" },
];
---

<footer
  class="bg-gradient-to-br from-[#0a0a0c] via-[#0f1419] to-[#1a1f2e] border-t border-cyan-500/10 pt-16 pb-10 text-sm"
>
  <div class="container mx-auto px-6">
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-x-8 gap-y-12"
    >
      <!-- Col 1: Identity & Contact -->
      <div class="space-y-6 lg:col-span-1">
        <a href="/" class="block">
          <img
            src={LogoMbc.src}
            alt="MBC Logo"
            width="140"
            class="opacity-90 grayscale hover:grayscale-0 transition-all duration-300"
          />
        </a>

        <div class="space-y-3 text-gray-400 pt-2">
          <div class="flex items-start gap-3">
            <Icon
              name="lucide:map-pin"
              class="w-4 h-4 text-[#31B0FF] mt-0.5 shrink-0"
            />
            <span class="text-gray-400 text-xs"
              >Calle Plateros 330, Cusco - Perú</span
            >
          </div>

          <div class="flex items-center gap-3">
            <Icon name="lucide:mail" class="w-4 h-4 text-[#31B0FF] shrink-0" />
            <a
              href="mailto:info@mbcpredictive.com"
              class="hover:text-[#31B0FF] transition-colors text-xs"
              >info@mbcpredictive.com</a
            >
          </div>

          <div class="flex items-center gap-3">
            <Icon name="lucide:globe" class="w-4 h-4 text-[#31B0FF] shrink-0" />
            <a
              href="https://www.mbcpredictive.com"
              target="_blank"
              class="hover:text-[#31B0FF] transition-colors text-xs"
              >www.mbcpredictive.com</a
            >
          </div>
        </div>
      </div>

      <!-- Col 2: Servicios -->
      <div>
        <h3
          class="text-white font-semibold mb-5 pl-2 border-l-2 border-[#31B0FF]"
        >
          Servicios
        </h3>
        <ul class="space-y-3">
          {
            services.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-gray-400 hover:text-[#31B0FF] transition-colors block text-xs"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Col 3: Empresa -->
      <div>
        <h3
          class="text-white font-semibold mb-5 pl-2 border-l-2 border-[#31B0FF]"
        >
          Empresa
        </h3>
        <ul class="space-y-3">
          {
            company.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-gray-400 hover:text-[#31B0FF] transition-colors block text-xs"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Col 4: Legal -->
      <div>
        <h3
          class="text-white font-semibold mb-5 pl-2 border-l-2 border-[#31B0FF]"
        >
          Legal
        </h3>
        <ul class="space-y-3">
          {
            legal.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-gray-400 hover:text-[#31B0FF] transition-colors block text-xs"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Col 5: Social & Actions -->
      <div class="flex flex-col items-start lg:items-end space-y-6">
        <div class="space-y-4 w-full lg:text-right">
          <span
            class="text-gray-500 text-xs uppercase tracking-wider font-semibold"
            >Síguenos</span
          >
          <div class="flex gap-3 lg:justify-end">
            <a
              href="#"
              class="w-8 h-8 rounded bg-white/5 border border-white/10 flex items-center justify-center text-gray-400 hover:bg-[#31B0FF] hover:border-[#31B0FF] hover:text-white transition-all duration-300"
              aria-label="LinkedIn"
            >
              <Icon name="lucide:linkedin" class="w-4 h-4" />
            </a>
            <a
              href="#"
              class="w-8 h-8 rounded bg-white/5 border border-white/10 flex items-center justify-center text-gray-400 hover:bg-[#31B0FF] hover:border-[#31B0FF] hover:text-white transition-all duration-300"
              aria-label="Facebook"
            >
              <Icon name="lucide:facebook" class="w-4 h-4" />
            </a>
            <a
              href="#"
              class="w-8 h-8 rounded bg-white/5 border border-white/10 flex items-center justify-center text-gray-400 hover:bg-[#31B0FF] hover:border-[#31B0FF] hover:text-white transition-all duration-300"
              aria-label="Instagram"
            >
              <Icon name="lucide:instagram" class="w-4 h-4" />
            </a>
          </div>
        </div>

        <a
          href="/login"
          class="inline-flex items-center justify-center px-6 py-2.5 bg-[#31B0FF] hover:bg-[#2196F3] text-white font-medium rounded shadow-[0_0_15px_rgba(49,176,255,0.2)] hover:shadow-[0_0_20px_rgba(49,176,255,0.4)] transition-all transform hover:-translate-y-0.5 w-full lg:w-auto text-center"
        >
          Acceso Clientes
        </a>

        <p
          class="text-gray-600 text-xs lg:text-right pt-4 border-t border-white/5 w-full"
        >
          © 2026 MBC Engineering.<br />Todos los derechos reservados.
        </p>
      </div>
    </div>
  </div>
</footer>
