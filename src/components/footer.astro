---
import { Icon } from "astro-icon/components";
import LogoMBC from "../assets/logo-mbc.svg";
import { services } from "../consts/services";

const company = [
  { name: "Sobre Nosotros", href: "/about" },
  { name: "Misión y Visión", href: "/about#mision-vision" },
  { name: "Nuestro Equipo", href: "/about#trayectoria" },
  { name: "Contacto", href: "/contact" },
];

const legal = [
  { name: "Términos y Condiciones", href: "/terms" },
  { name: "Política de Privacidad", href: "/privacy" },
  { name: "Cumplimiento Normativo", href: "/compliance" },
  { name: "Mapa del Sitio", href: "/sitemap" },
];
---

<footer class="bg-[#08080A] border-t border-white/5 pt-16 pb-10 text-sm">
  <div class="container mx-auto px-6">
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-x-8 gap-y-12"
    >
      <!-- Col 1: Identity & Contact -->
      <div class="space-y-6 lg:col-span-1">
        <a href="/" class="flex items-center gap-3 group/logo">
          <div class="flex flex-col items-center justify-center gap-1">
            <div class="flex items-center gap-1">
              <img
                src={LogoMBC.src}
                alt="MBC Logo"
                width="45"
                height="45"
                class="filter drop-shadow-lg opacity-90 group-hover/logo:opacity-100 transition-opacity duration-300"
              />
              <span
                class="text-gray-200/80 font-medium font-[Roboto] text-4xl tracking-tight leading-none"
                >MBC</span
              >
            </div>

            <span
              class="text-gray-400/90 text-[7px] font-[Roboto] font-semibold tracking-[0.2em] uppercase leading-none mt-0.5"
              >INGENIERÍA Y CONFIABILIDAD</span
            >
          </div>
        </a>

        <div class="space-y-4 text-gray-500 pt-2">
          <div class="flex items-start gap-3 group/item">
            <Icon
              name="lucide:map-pin"
              class="w-4 h-4 text-[#31B0FF]/70 mt-0.5 shrink-0 group-hover/item:text-[#31B0FF] transition-colors"
            />
            <span class="text-xs leading-relaxed"
              >Calle Plateros 330, Cusco - Perú</span
            >
          </div>

          <div class="flex items-center gap-3 group/item">
            <Icon
              name="lucide:mail"
              class="w-4 h-4 text-[#31B0FF]/70 shrink-0 group-hover/item:text-[#31B0FF] transition-colors"
            />
            <a
              href="mailto:info@mbcpredictive.com"
              class="hover:text-white transition-colors text-xs"
              >info@mbcpredictive.com</a
            >
          </div>

          <div class="flex items-center gap-3 group/item">
            <Icon
              name="lucide:globe"
              class="w-4 h-4 text-[#31B0FF]/70 shrink-0 group-hover/item:text-[#31B0FF] transition-colors"
            />
            <a
              href="https://www.mbcpredictive.com"
              target="_blank"
              class="hover:text-white transition-colors text-xs"
              >www.mbcpredictive.com</a
            >
          </div>
        </div>
      </div>

      <!-- Col 2: Servicios -->
      <div>
        <h3
          class="text-white font-semibold mb-6 text-sm uppercase tracking-wider"
        >
          Servicios
        </h3>
        <ul class="space-y-3">
          {
            services.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-gray-500 hover:text-[#31B0FF] transition-colors block text-xs"
                >
                  {item.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Col 3: Empresa -->
      <div>
        <h3
          class="text-white font-semibold mb-6 text-sm uppercase tracking-wider"
        >
          Empresa
        </h3>
        <ul class="space-y-3">
          {
            company.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-gray-500 hover:text-[#31B0FF] transition-colors block text-xs"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Col 4: Legal -->
      <div>
        <h3
          class="text-white font-semibold mb-6 text-sm uppercase tracking-wider"
        >
          Legal
        </h3>
        <ul class="space-y-3">
          {
            legal.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-gray-500 hover:text-[#31B0FF] transition-colors block text-xs"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Col 5: Social & Actions -->
      <div class="flex flex-col items-start lg:items-end space-y-8 md:col-span-2 lg:col-span-1">
        <div class="space-y-4 w-full lg:text-right">
          <span
            class="text-gray-600 text-[10px] uppercase tracking-widest font-bold"
            >Síguenos</span
          >
          <div class="flex gap-2 lg:justify-end mt-2">
            <a
              href="https://www.linkedin.com/company/mbc-confiabilidad/"
              target="_blank"
              rel="noopener noreferrer"
              class="w-8 h-8 rounded bg-white/5 border border-white/5 flex items-center justify-center text-gray-500 hover:border-[#31B0FF]/30 hover:text-[#31B0FF] hover:bg-[#31B0FF]/10 transition-all duration-300"
              aria-label="LinkedIn"
            >
              <Icon name="lucide:linkedin" class="w-4 h-4" />
            </a>
          </div>
        </div>

        <a
          href="/login"
          class="inline-flex items-center justify-center gap-2 px-6 py-2.5 bg-[#31B0FF]/10 text-[#31B0FF] border border-[#31B0FF]/20 hover:border-[#31B0FF]/50 hover:bg-[#31B0FF]/20 text-xs font-bold uppercase tracking-wider rounded transition-all duration-300 w-full lg:w-auto text-center"
        >
          <Icon name="lucide:user" class="w-4 h-4" />
          <span>Acceso Clientes</span>
        </a>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-600 text-[10px] leading-relaxed text-center md:text-left">
        © 2026 MBC Engineering. Todos los derechos reservados.
      </p>
    </div>
  </div>

  <!-- WhatsApp Floating Button -->
  <a
    href="https://wa.me/51984654321"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="Contactar por WhatsApp"
  >
    <svg class="w-10 h-10 fill-current" viewBox="0 0 30 30" xmlns="http://www.w3.org/2000/svg">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
    </svg>
  </a>
</footer>
