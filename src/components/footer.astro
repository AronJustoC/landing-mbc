---
import { Icon } from "astro-icon/components";
import LogoMbc from "../assets/logo-1.png";
---

<footer
  class="bg-gradient-to-br from-[#0a0a0c] via-[#0f1419] to-[#1a1f2e] border-t border-cyan-500/10 pt-12 pb-8 text-sm"
>
  <div class="container mx-auto px-6">
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-x-8 gap-y-10"
    >
      <!-- Col 1: Identity & Contact -->
      <div class="space-y-6">
        <img
          src={LogoMbc.src}
          alt="MBC Logo"
          width="140"
          class="opacity-90 grayscale hover:grayscale-0 transition-all duration-300"
        />
        <div class="space-y-2 text-gray-400">
          <div class="flex items-center gap-2">
            <span class="text-gray-500">Tel:</span>
            <a
              href="tel:+51921005260"
              class="hover:text-cyan-400 transition-colors">(+51) 921 005 260</a
            >
          </div>
          <div class="flex items-center gap-2">
            <span class="text-gray-500">Email:</span>
            <a
              href="mailto:contact@mbc.com"
              class="hover:text-cyan-400 transition-colors">contact@mbc.com</a
            >
          </div>
          <a
            href="#"
            class="block text-gray-200 font-medium hover:text-cyan-400 transition-colors mt-2"
          >
            Ubicar Oficina Central →
          </a>
        </div>
      </div>

      <!-- Col 2: Company -->
      <div>
        <h3 class="text-white font-semibold mb-4">Empresa</h3>
        <ul class="space-y-3 text-gray-400">
          <li>
            <a href="#" class="hover:text-cyan-400 transition-colors"
              >Sobre Nosotros</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-cyan-400 transition-colors"
              >Únete al Equipo</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-cyan-400 transition-colors"
              >Contáctanos</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-cyan-400 transition-colors"
              >Noticias & Blog</a
            >
          </li>
        </ul>
      </div>

      <!-- Col 3: Legal -->
      <div>
        <h3 class="text-white font-semibold mb-4">Legal</h3>
        <ul class="space-y-3 text-gray-400">
          <li>
            <a href="#" class="hover:text-cyan-400 transition-colors"
              >Términos y Condiciones</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-cyan-400 transition-colors"
              >Política de Privacidad</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-cyan-400 transition-colors"
              >Cumplimiento Normativo</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-cyan-400 transition-colors"
              >Mapa del Sitio</a
            >
          </li>
        </ul>
      </div>

      <!-- Col 4: Action & Social -->
      <div class="flex flex-col items-start lg:items-end space-y-6">
        <!-- Socials -->
        <div class="space-y-2 w-full lg:text-right">
          <span class="text-gray-500 text-xs uppercase tracking-wider"
            >Síguenos:</span
          >
          <div class="flex gap-3 lg:justify-end">
            <a
              href="#"
              class="w-8 h-8 rounded bg-gray-900/50 border border-cyan-500/10 flex items-center justify-center text-gray-400 hover:border-cyan-500/50 hover:text-cyan-400 transition-all"
            >
              <Icon name="lucide:linkedin" class="w-4 h-4" />
            </a>
            <a
              href="#"
              class="w-8 h-8 rounded bg-gray-900/50 border border-cyan-500/10 flex items-center justify-center text-gray-400 hover:border-cyan-500/50 hover:text-cyan-400 transition-all"
            >
              <Icon name="lucide:youtube" class="w-4 h-4" />
            </a>
            <a
              href="#"
              class="w-8 h-8 rounded bg-gray-900/50 border border-cyan-500/10 flex items-center justify-center text-gray-400 hover:border-cyan-500/50 hover:text-cyan-400 transition-all"
            >
              <Icon name="lucide:twitter" class="w-4 h-4" />
            </a>
          </div>
        </div>

        <!-- CTA Button -->
        <a
          href="#"
          class="inline-flex items-center justify-center px-6 py-2.5 bg-gradient-to-r from-[#00d4ff] to-[#0099cc] hover:from-[#00b8e6] hover:to-[#0080aa] text-white font-medium rounded shadow-[0_0_15px_rgba(0,212,255,0.2)] hover:shadow-[0_0_20px_rgba(0,212,255,0.4)] transition-all transform hover:scale-105 w-full lg:w-auto text-center"
        >
          Acceso Clientes
        </a>

        <!-- Copyright -->
        <p class="text-gray-600 text-xs lg:text-right">
          © 2026 MBC Engineering.<br />Todos los derechos reservados.
        </p>
      </div>
    </div>
  </div>
</footer>
