---
import { Icon } from "astro-icon/components";
import LogoMBC from "../assets/logo-mbc.svg";

const services = [
  {
    name: "Mantenimiento Predictivo",
    description: "Monitoreo de condición para predecir fallas.",
    href: "/services#predictive",
    icon: "lucide:activity",
  },
  {
    name: "Ingeniería de Confiabilidad",
    description: "Optimización basada en datos y riesgo.",
    href: "/services#reliability",
    icon: "lucide:shield-check",
  },
  {
    name: "Análisis Dinámico",
    description: "Diagnóstico Vibracional y Modal.",
    href: "/services#dynamic",
    icon: "lucide:waves",
  },
  {
    name: "Evaluación Estructural",
    description: "Análisis de esfuerzo y deformación.",
    href: "/services#structural",
    icon: "lucide:construction",
  },
  {
    name: "Monitoreo de Activos",
    description: "Seguimiento continuo en tiempo real.",
    href: "/services#monitoring",
    icon: "lucide:monitor-check",
  },
  {
    name: "Soporte Técnico",
    description: "Asistencia experta e informes.",
    href: "/services#support",
    icon: "lucide:headset",
  },
];

const aboutUs = [
  {
    name: "Nuestra Historia",
    description: "Conoce nuestra trayectoria y valores.",
    href: "/nosotros/historia",
  },
  {
    name: "Misión y Visión",
    description: "Los pilares que guían nuestro trabajo.",
    href: "/nosotros/mision-vision",
  },
  {
    name: "Nuestro Equipo",
    description: "El talento detrás de nuestro éxito.",
    href: "/nosotros/equipo",
  },
];
---

<header
  id="main-header"
  class="sticky top-0 w-full z-[1000] transition-all duration-300 group -mb-20"
>
  <div
    id="header-bg"
    class="absolute inset-0 bg-[#0a0a0c]/80 backdrop-blur-md border-b border-white/5 transition-opacity duration-300 opacity-0"
  >
  </div>
  <div class="relative container mx-auto px-6">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group/logo">
        <img
          src={LogoMBC.src}
          alt="MBC Logo"
          width="50"
          height="50"
          class="filter drop-shadow-lg group-hover/logo:scale-110 transition-transform duration-300"
        />
        <p
          class="text-white/90 font-bold text-[38px] tracking-tight drop-shadow-md"
        >
          MBC
        </p>
      </a>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-6">
        <a
          href="/"
          class="text-sm font-medium text-gray-300 hover:text-[#31B0FF] transition-colors duration-300"
        >
          Inicio
        </a>

        <!-- Servicios Dropdown -->
        <div class="relative group/dropdown">
          <a
            href="/services"
            class="flex items-center gap-1.5 text-sm font-medium text-gray-300 hover:text-[#31B0FF] transition-colors duration-300 py-4"
          >
            Servicios
            <Icon
              name="lucide:chevron-down"
              class="w-4 h-4 transition-transform duration-300 group-hover/dropdown:rotate-180"
            />
          </a>

          <!-- Dropdown Menu -->
          <div
            class="absolute top-full left-1/2 -translate-x-1/2 pt-2 opacity-0 invisible group-hover/dropdown:opacity-100 group-hover/dropdown:visible transition-all duration-300 transform translate-y-2 group-hover/dropdown:translate-y-0 w-[600px]"
          >
            <div
              class="bg-[#0a0a0c]/95 backdrop-blur-xl border border-white/10 rounded-2xl shadow-[0_0_40px_rgba(0,0,0,0.5)] p-4 grid grid-cols-2 gap-2"
            >
              {
                services.map((service) => (
                  <a
                    href={service.href}
                    class="flex items-start gap-3 p-3 rounded-xl hover:bg-white/5 transition-all duration-300 group/item"
                  >
                    <div class="w-10 h-10 flex items-center justify-center rounded-lg bg-[#31B0FF]/10 text-[#31B0FF] shrink-0 group-hover/item:bg-[#31B0FF] group-hover/item:text-white transition-all duration-300">
                      <Icon name={service.icon} class="w-5 h-5" />
                    </div>
                    <div>
                      <p class="text-white font-medium text-sm mb-0.5">
                        {service.name}
                      </p>
                      <p class="text-gray-400 text-xs leading-relaxed line-clamp-2">
                        {service.description}
                      </p>
                    </div>
                  </a>
                ))
              }
            </div>
          </div>
        </div>

        <a
          href="/about"
          class="text-sm font-medium text-gray-300 hover:text-[#31B0FF] transition-colors duration-300"
        >
          Nosotros</a
        >

        <a
          href="/contact"
          class="text-sm font-medium text-gray-300 hover:text-[#31B0FF] transition-colors duration-300"
        >
          Contacto
        </a>
      </nav>

      <!-- Actions -->
      <div class="flex items-center gap-4">
        <a
          href="/login"
          class="hidden md:flex items-center gap-2 px-5 py-2 bg-[#31B0FF] hover:bg-[#2196F3] text-white text-sm font-semibold rounded-full transition-all duration-300 shadow-[0_0_20px_rgba(49,176,255,0.3)] hover:shadow-[0_0_30px_rgba(49,176,255,0.5)] transform hover:-translate-y-0.5"
        >
          <Icon name="lucide:user" class="w-4 h-4" />
          <span>Acceso Clientes</span>
        </a>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="md:hidden w-10 h-10 rounded-full bg-white/5 border border-white/10 flex items-center justify-center text-white hover:bg-white/10 transition-all duration-300"
          aria-label="Menu"
        >
          <Icon name="lucide:menu" class="w-5 h-5" />
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="md:hidden fixed inset-0 bg-[#0a0a0c] z-[9999] transform translate-x-full transition-transform duration-500 ease-in-out"
  >
    <div class="flex flex-col h-full overflow-y-auto">
      <div
        class="flex items-center justify-between p-6 border-b border-white/10"
      >
        <a href="/" class="flex items-center gap-3">
          <img src={LogoMBC.src} alt="MBC Logo" width="40" height="40" />
          <span class="text-white font-bold text-2xl">MBC</span>
        </a>
        <button
          id="close-mobile-menu"
          class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center text-white hover:bg-white/10"
        >
          <Icon name="lucide:x" class="w-5 h-5" />
        </button>
      </div>

      <nav class="flex-1 p-6 space-y-2">
        <a
          href="/"
          class="block p-4 text-lg font-medium text-gray-300 hover:text-white hover:bg-white/5 rounded-xl transition-colors"
        >
          Inicio
        </a>

        <!-- Mobile Servicios -->
        <div class="space-y-2">
          <div
            class="flex items-center justify-between p-4 rounded-xl hover:bg-white/5 group relative z-50"
          >
            <a
              href="/services"
              class="text-lg font-medium text-gray-300 hover:text-white flex-1"
            >
              Servicios
            </a>
            <button
              class="p-2 text-gray-400 hover:text-white"
              data-submenu-trigger
            >
              <Icon
                name="lucide:chevron-down"
                class="w-5 h-5 transition-transform duration-300"
              />
            </button>
          </div>

          <div class="pl-4 space-y-1 hidden" id="services-submenu">
            {
              services.map((s) => (
                <a
                  href={s.href}
                  class="flex items-center gap-3 p-3 text-gray-400 hover:text-white hover:bg-white/5 rounded-lg transition-colors"
                >
                  <Icon name={s.icon} class="w-4 h-4 text-[#31B0FF]" />
                  <span class="text-sm">{s.name}</span>
                </a>
              ))
            }
          </div>
        </div>

        <a
          href="/about"
          class="block p-4 text-lg font-medium text-gray-300 hover:text-white hover:bg-white/5 rounded-xl transition-colors"
        >
          Nosotros
        </a>

        <a
          href="/contact"
          class="block p-4 text-lg font-medium text-gray-300 hover:text-white hover:bg-white/5 rounded-xl transition-colors"
        >
          Contacto
        </a>
      </nav>

      <div class="p-6 border-t border-white/10">
        <a
          href="/login"
          class="flex items-center justify-center gap-2 w-full p-4 bg-[#31B0FF] text-white font-semibold rounded-xl hover:bg-[#2196F3] transition-colors"
        >
          <Icon name="lucide:user" class="w-5 h-5" />
          Acceso Clientes
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  function initHeader() {
    // Mobile Menu Logic
    const mobileMenuBtn = document.getElementById("mobile-menu-button");
    const closeMobileMenuBtn = document.getElementById("close-mobile-menu");
    const mobileMenu = document.getElementById("mobile-menu");
    const submenuTrigger = document.querySelector<HTMLElement>(
      "[data-submenu-trigger]",
    );
    const servicesSubmenu = document.getElementById("services-submenu");

    // Helper to secure toggle
    const toggleMenu = (open: boolean) => {
      if (!mobileMenu) return;
      if (open) {
        mobileMenu.classList.remove("translate-x-full");
        // Lock body scroll
        document.body.style.overflow = "hidden";
        // Ensure header is visible when opening menu
        const header = document.getElementById("main-header");
        header?.classList.remove("-translate-y-full");
      } else {
        mobileMenu.classList.add("translate-x-full");
        document.body.style.overflow = "";
      }
      window.dispatchEvent(new Event("scroll"));
    };

    if (mobileMenuBtn) {
      mobileMenuBtn.onclick = () => toggleMenu(true);
    }
    if (closeMobileMenuBtn) {
      closeMobileMenuBtn.onclick = () => toggleMenu(false);
    }

    // Submenu Toggle
    if (submenuTrigger && servicesSubmenu) {
      submenuTrigger.onclick = (e) => {
        e.stopPropagation();
        servicesSubmenu.classList.toggle("hidden");
        submenuTrigger.querySelector("svg")?.classList.toggle("rotate-180");
        const isExpanded = !servicesSubmenu.classList.contains("hidden");
        submenuTrigger.setAttribute("aria-expanded", String(isExpanded));
      };
    }

    // Header Scroll Logic
    const headerBg = document.getElementById("header-bg");
    const header = document.getElementById("main-header");
    let lastScroll = 0;

    const handleScroll = () => {
      const currentScroll = window.scrollY;
      if (currentScroll < 0) return;

      // Blur Effect
      if (currentScroll > 20) {
        headerBg?.classList.remove("opacity-0");
        headerBg?.classList.add("opacity-100");
      } else {
        headerBg?.classList.add("opacity-0");
        headerBg?.classList.remove("opacity-100");
      }

      // Hide/Show Logic
      const isMobileMenuOpen = document.body.style.overflow === "hidden";
      // Only consider hover on large screens to avoid sticky touch states on mobile
      const isLargeScreen = window.matchMedia("(min-width: 768px)").matches;
      const isHovering = isLargeScreen && header?.matches(":hover");

      if (!isMobileMenuOpen && !isHovering) {
        if (currentScroll > lastScroll && currentScroll > 100) {
          header?.classList.add("-translate-y-full");
        } else {
          header?.classList.remove("-translate-y-full");
        }
      } else {
        // Ensure header stays visible if interacting
        header?.classList.remove("-translate-y-full");
      }

      lastScroll = currentScroll;
    };

    window.removeEventListener("scroll", handleScroll);
    window.addEventListener("scroll", handleScroll, { passive: true });
  }

  // Initialize on load and after Astro swaps
  document.addEventListener("astro:page-load", initHeader);
  document.addEventListener("DOMContentLoaded", initHeader);
</script>
