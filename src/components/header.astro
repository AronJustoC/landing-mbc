                id="services-submenu"
              >
                <div class="grid grid-cols-1 divide-y divide-white/5">
                  {
                    services.map((s) => (
                      <a
                        href={s.href}
                        class="flex items-center gap-4 p-5 pl-14 group/sub"
                      >
                        <div class="w-1.5 h-1.5 rounded-full bg-[#31B0FF]/30 group-hover/sub:bg-[#31B0FF] transition-colors"></div>
                        <span class="text-sm font-medium text-gray-400 group-hover/sub:text-white transition-colors">{s.name}</span>
                      </a>
                    ))
