                    <div class="flex items-center justify-between mb-8 pb-4 border-b border-white/5">
                      <span class="text-[11px] font-bold text-[#31B0FF] uppercase tracking-[0.3em]">Servicios de Ingeniería</span>
                      <a href="/services" class="text-[11px] font-semibold text-gray-500 hover:text-white transition-colors uppercase tracking-wider flex items-center gap-1 group/all">
                        Ver todo
                        <Icon name="lucide:arrow-right" class="w-3 h-3 group-hover/all:translate-x-1 transition-transform" />
                      </a>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-x-8 gap-y-2">
                      {
                        services.map((service) => (
                          <a
                            href={service.href}
