---
import { Icon } from "astro-icon/components";
import LogoMBC from "../assets/logo-mbc.svg";
import { services as servicesData } from "../consts/services";

const services = servicesData.map((s) => ({
  name: s.title,
  href: `/servicios/${s.id}`,
  icon: s.icon,
}));

const currentPath = Astro.url.pathname;

const navLinks = [
  { name: "Inicio", href: "/" },
  { name: "Servicios", href: "/services", hasDropdown: true },
  { name: "Nosotros", href: "/about" },
  { name: "Contacto", href: "/contact" },
];

const isLinkActive = (href: string) => {
  if (href === "/" && currentPath === "/") return true;
  if (href !== "/" && currentPath.startsWith(href)) return true;
  return false;
};
---

<header
  id="main-header"
  class="relative w-full z-[1000] transition-all duration-300 group -mb-20"
>
  <div
    id="header-bg"
    class="absolute inset-0 bg-[#08080A]/95 border-b border-white/5 transition-opacity duration-300 opacity-0"
  >
  </div>
  <div class="relative container mx-auto px-6">
    <div class="flex items-center h-20">
      <!-- Logo Area -->
      <div class="flex-1 flex justify-start">
        <a href="/" class="flex items-center gap-3 group/logo">
          <div class="flex flex-col items-center justify-center gap-1">
            <div class="flex items-center gap-1">
              <img
                src={LogoMBC.src}
                alt="MBC Logo"
                width="45"
                height="45"
                class="filter drop-shadow-lg opacity-90 group-hover/logo:opacity-100 transition-opacity duration-300"
              />
              <span
                class="text-gray-200 font-light font-sans text-4xl tracking-tight leading-none"
                >MBC</span
              >
            </div>
            <span
              class="text-gray-500 text-[7px] font-sans font-bold tracking-[0.3em] uppercase leading-none mt-0.5"
              >INGENIERÍA Y CONFIABILIDAD</span
            >
          </div>
        </a>
      </div>

      <!-- Navigation Area (Absolute Centered) -->
      <nav class="hidden md:flex items-center gap-12 absolute left-1/2 -translate-x-1/2">
        {navLinks.map((link) => (
          link.hasDropdown ? (
            <div class="relative group/nav" id="desktop-services-container">
              <div class="flex items-center gap-1.5 py-6 cursor-pointer">
                <a
                  href={link.href}
                  class={`text-[10px] font-bold uppercase tracking-[0.2em] transition-all duration-300 relative py-1 ${
                    isLinkActive(link.href) ? "text-[#31B0FF]" : "text-gray-400 group-hover/nav:text-white"
                  }`}
                >
                  {link.name}
                  <span class={`absolute bottom-0 left-0 h-px bg-[#31B0FF] transition-all duration-300 ${isLinkActive(link.href) ? "w-full" : "w-0 group-hover/nav:w-full"}`}></span>
                </a>
                <button
                  id="desktop-services-trigger"
                  class={`p-0.5 transition-colors duration-300 focus:outline-none ${isLinkActive(link.href) ? "text-[#31B0FF]" : "text-gray-400 group-hover/nav:text-white"}`}
                  aria-label="Toggle Services Menu"
                  aria-expanded="false"
                >
                  <Icon
                    name="lucide:chevron-down"
                    class="w-3.5 h-3.5 transition-transform duration-300 group-hover/nav:rotate-180"
                  />
                </button>
              </div>

              <!-- Refined Dropdown Menu -->
              <div
                id="desktop-services-menu"
                class="absolute top-full left-1/2 -translate-x-1/2 pt-0 opacity-0 invisible transition-all duration-300 transform translate-y-2 w-72"
              >
                <div
                  class="bg-[#0a0f14]/98 border border-white/5 rounded-2xl shadow-2xl overflow-hidden backdrop-blur-3xl p-2"
                >
                  <div class="space-y-1">
                    {
                      services.map((service) => (
                        <a
                          href={service.href}
                          class="flex items-center gap-4 p-3 rounded-xl hover:bg-white/[0.03] transition-all duration-300 group/item"
                        >
                          <div class="w-8 h-8 flex items-center justify-center rounded-lg bg-[#31B0FF]/5 text-[#31B0FF]/70 shrink-0 group-hover/item:bg-[#31B0FF]/20 group-hover/item:text-[#31B0FF] transition-all duration-500">
                            <Icon name={service.icon} class="w-4 h-4" />
                          </div>
                          <span class="text-gray-300 font-medium text-[11px] group-hover/item:text-white transition-colors">
                            {service.name}
                          </span>
                        </a>
                      ))
                    }
                  </div>
                  <div class="mt-2 pt-2 border-t border-white/5">
                    <a href="/services" class="flex items-center justify-center gap-2 py-2 text-[10px] font-bold text-gray-500 hover:text-[#31B0FF] uppercase tracking-widest transition-colors">
                      Ver todo
                      <Icon name="lucide:arrow-right" class="w-3 h-3" />
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ) : (
            <a
              href={link.href}
              class={`text-[10px] font-bold uppercase tracking-[0.2em] transition-all duration-300 relative py-1 group/nav ${
                isLinkActive(link.href) ? "text-[#31B0FF]" : "text-gray-400 hover:text-white"
              }`}
            >
              {link.name}
              <span class={`absolute bottom-0 left-0 h-px bg-[#31B0FF] transition-all duration-300 ${isLinkActive(link.href) ? "w-full" : "w-0 group-hover/nav:w-full"}`}></span>
            </a>
          )
        ))}
      </nav>

      <!-- Actions Area -->
      <div class="flex-1 flex items-center justify-end gap-6">
        <a
          href="/login"
          class="hidden md:flex items-center gap-2 px-5 py-2 bg-white/5 text-gray-400 hover:text-[#31B0FF] hover:bg-[#31B0FF]/5 border border-white/10 hover:border-[#31B0FF]/30 text-[10px] font-bold uppercase tracking-[0.2em] rounded-full transition-all duration-500 group/btn"
        >
          <Icon name="lucide:user" class="w-3.5 h-3.5 transition-transform duration-300" />
          <span>Acceso</span>
        </a>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="md:hidden w-10 h-10 rounded bg-white/5 border border-white/10 flex items-center justify-center text-white hover:bg-white/10 transition-all duration-300"
          aria-label="Menu"
        >
          <Icon name="lucide:menu" class="w-5 h-5" />
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="md:hidden fixed inset-0 bg-[#08080A]/98 backdrop-blur-xl z-[9999] transform translate-x-full transition-transform duration-500 ease-in-out flex flex-col"
  >
    <div
      class="flex items-center justify-between p-6 border-b border-white/5"
    >
      <a href="/" class="flex items-center gap-3">
        <img src={LogoMBC.src} alt="MBC Logo" width="40" height="40" />
        <div class="flex flex-col">
          <span class="text-white font-bold text-xl tracking-tight leading-none"
            >MBC</span
          >
          <span
            class="text-[#31B0FF] text-[6px] font-bold tracking-widest uppercase leading-none"
            >INGENIERÍA Y CONFIABILIDAD</span
          >
        </div>
      </a>
      <button
        id="close-mobile-menu"
        class="w-12 h-12 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center text-white hover:bg-white/10 transition-all hover:rotate-90"
      >
        <Icon name="lucide:x" class="w-6 h-6" />
      </button>
    </div>

    <div class="flex-1 overflow-y-auto px-6 py-8">
      <nav class="space-y-4">
        {navLinks.map((link, index) => (
          link.hasDropdown ? (
            <div
              class={`rounded-2xl border transition-all duration-300 overflow-hidden ${isLinkActive(link.href) ? 'bg-[#31B0FF]/5 border-[#31B0FF]/20' : 'bg-white/[0.02] border-white/5'}`}
              style={`transition-delay: ${index * 50}ms`}
            >
              <div
                class="flex items-center justify-between p-5 cursor-pointer group"
                data-submenu-trigger
              >
                <div class="flex items-center gap-4">
                  <div class={`w-10 h-10 rounded-xl flex items-center justify-center transition-colors ${isLinkActive(link.href) ? 'bg-[#31B0FF] text-white' : 'bg-white/5 text-gray-400 group-hover:text-white'}`}>
                    <Icon name="lucide:layers" class="w-5 h-5" />
                  </div>
                  <span class={`text-lg font-bold transition-colors ${isLinkActive(link.href) ? 'text-white' : 'text-gray-400'}`}>{link.name}</span>
                </div>
                <Icon
                  name="lucide:chevron-down"
                  class="w-5 h-5 text-gray-500 transition-transform duration-300"
                />
              </div>

              <div
                class="hidden bg-black/20 border-t border-white/5"
                id="services-submenu"
              >
                <div class="grid grid-cols-1 divide-y divide-white/5">
                  {
                    services.map((s) => (
                      <a
                        href={s.href}
                        class="flex items-center gap-4 p-5 pl-14 group/sub"
                      >
                        <div class="w-1.5 h-1.5 rounded-full bg-[#31B0FF]/30 group-hover/sub:bg-[#31B0FF] transition-colors"></div>
                        <span class="text-sm font-medium text-gray-400 group-hover/sub:text-white transition-colors">{s.name}</span>
                      </a>
                    ))
                  }
                  <a
                    href="/services"
                    class="flex items-center justify-center gap-2 p-5 bg-[#31B0FF]/10 text-[#31B0FF] text-xs font-bold uppercase tracking-[0.2em]"
                  >
                    Todos los servicios
                    <Icon name="lucide:arrow-right" class="w-4 h-4" />
                  </a>
                </div>
              </div>
            </div>
          ) : (
            <a
              href={link.href}
              class={`flex items-center gap-4 p-5 rounded-2xl border transition-all duration-300 group ${
                isLinkActive(link.href) 
                ? 'bg-[#31B0FF]/5 border-[#31B0FF]/20 text-white' 
                : 'bg-white/[0.02] border-white/5 text-gray-400 hover:text-white hover:bg-white/5'
              }`}
              style={`transition-delay: ${index * 50}ms`}
            >
              <div class={`w-10 h-10 rounded-xl flex items-center justify-center transition-colors ${
                isLinkActive(link.href) ? "bg-[#31B0FF] text-white" : "bg-white/5 text-gray-400 group-hover:text-white"
              }`}>
                <Icon name={link.name === 'Inicio' ? 'lucide:home' : link.name === 'Nosotros' ? 'lucide:users' : 'lucide:mail'} class="w-5 h-5" />
              </div>
              <span class="text-lg font-bold">{link.name}</span>
            </a>
          )
        ))}
      </nav>

      <!-- Mobile Contact Info -->
      <div class="mt-12 pt-12 border-t border-white/5 space-y-8">
        <div>
          <span class="text-[10px] font-bold text-gray-500 uppercase tracking-[0.3em] mb-4 block">Contacto Rápido</span>
          <div class="space-y-4">
            <a href="tel:+51000000000" class="flex items-center gap-4 text-gray-400 hover:text-white transition-colors">
              <div class="w-8 h-8 rounded-lg bg-white/5 flex items-center justify-center">
                <Icon name="lucide:phone" class="w-4 h-4" />
              </div>
              <span class="text-sm font-medium">+51 000 000 000</span>
            </a>
            <a href="mailto:info@mbcpredictive.com" class="flex items-center gap-4 text-gray-400 hover:text-white transition-colors">
              <div class="w-8 h-8 rounded-lg bg-white/5 flex items-center justify-center">
                <Icon name="lucide:mail" class="w-4 h-4" />
              </div>
              <span class="text-sm font-medium">info@mbcpredictive.com</span>
            </a>
          </div>
        </div>

        <div class="flex gap-4">
          <a href="https://www.linkedin.com/company/mbc-confiabilidad/" target="_blank" rel="noopener noreferrer" class="w-12 h-12 rounded-xl bg-white/5 flex items-center justify-center text-gray-400 hover:text-white hover:bg-[#31B0FF] transition-all">
            <Icon name="lucide:linkedin" class="w-5 h-5" />
          </a>
        </div>
      </div>
    </div>

    <div class="p-6 border-t border-white/5 bg-black/20">
      <a
        href="/login"
        class="flex items-center justify-center gap-3 w-full p-5 bg-[#31B0FF] text-white font-bold rounded-2xl hover:bg-[#2196F3] transition-all text-sm uppercase tracking-widest shadow-lg shadow-[#31B0FF]/20"
      >
        <Icon name="lucide:user" class="w-5 h-5" />
        Acceso Clientes
      </a>
    </div>
  </div>
</header>

<script>
  function initHeader() {
    // Mobile Menu Logic
    const mobileMenuBtn = document.getElementById("mobile-menu-button");
    const closeMobileMenuBtn = document.getElementById("close-mobile-menu");
    const mobileMenu = document.getElementById("mobile-menu");
    const submenuTrigger = document.querySelector<HTMLElement>(
      "[data-submenu-trigger]",
    );
    const servicesSubmenu = document.getElementById("services-submenu");

    // Helper to secure toggle
    const toggleMenu = (open: boolean) => {
      if (!mobileMenu) return;
      if (open) {
        mobileMenu.classList.remove("translate-x-full");
        // Lock body scroll
        document.body.style.overflow = "hidden";
        // Ensure header is visible when opening menu
        const header = document.getElementById("main-header");
        header?.classList.remove("-translate-y-full");
      } else {
        mobileMenu.classList.add("translate-x-full");
        document.body.style.overflow = "";
      }
      window.dispatchEvent(new Event("scroll"));
    };

    if (mobileMenuBtn) {
      mobileMenuBtn.onclick = () => toggleMenu(true);
    }
    if (closeMobileMenuBtn) {
      closeMobileMenuBtn.onclick = () => toggleMenu(false);
    }

    // Mobile Submenu Toggle
    if (submenuTrigger && servicesSubmenu) {
      submenuTrigger.onclick = (e) => {
        e.stopPropagation();
        servicesSubmenu.classList.toggle("hidden");
        submenuTrigger.querySelector("svg")?.classList.toggle("rotate-180");
        const isExpanded = !servicesSubmenu.classList.contains("hidden");
        submenuTrigger.setAttribute("aria-expanded", String(isExpanded));
      };
    }

    // Desktop Dropdown Toggle
    const desktopTrigger = document.getElementById("desktop-services-trigger");
    const desktopMenu = document.getElementById("desktop-services-menu");
    const desktopContainer = document.getElementById(
      "desktop-services-container",
    );

    if (desktopTrigger && desktopMenu && desktopContainer) {
      const toggleDesktopMenu = (show: boolean) => {
        if (show) {
          desktopMenu.classList.remove(
            "opacity-0",
            "invisible",
            "translate-y-2",
          );
          desktopMenu.classList.add("opacity-100", "visible", "translate-y-0");
          desktopTrigger.querySelector("svg")?.classList.add("rotate-180");
          desktopTrigger.setAttribute("aria-expanded", "true");
        } else {
          desktopMenu.classList.add("opacity-0", "invisible", "translate-y-2");
          desktopMenu.classList.remove(
            "opacity-100",
            "visible",
            "translate-y-0",
          );
          desktopTrigger.querySelector("svg")?.classList.remove("rotate-180");
          desktopTrigger.setAttribute("aria-expanded", "false");
        }
      };

      desktopTrigger.onclick = (e) => {
        e.stopPropagation();
        const isOpen = desktopMenu.classList.contains("visible");
        toggleDesktopMenu(!isOpen);
      };

      // Close on click outside
      document.addEventListener("click", (e) => {
        if (!desktopContainer.contains(e.target as Node)) {
          toggleDesktopMenu(false);
        }
      });

      // Close on escape key
      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape") {
          toggleDesktopMenu(false);
        }
      });
    }

    // Header Scroll Logic
    const headerBg = document.getElementById("header-bg");
    const header = document.getElementById("main-header");
    let lastScroll = 0;

    const handleScroll = () => {
      const currentScroll = window.scrollY;
      if (currentScroll < 0) return;

      // Blur Effect
      if (currentScroll > 20) {
        headerBg?.classList.remove("opacity-0");
        headerBg?.classList.add("opacity-100");
      } else {
        headerBg?.classList.add("opacity-0");
        headerBg?.classList.remove("opacity-100");
      }

      // Hide/Show Logic
      const isMobileMenuOpen = document.body.style.overflow === "hidden";
      // Only consider hover on large screens to avoid sticky touch states on mobile
      const isLargeScreen = window.matchMedia("(min-width: 768px)").matches;
      const isHovering = isLargeScreen && header?.matches(":hover");

      if (!isMobileMenuOpen && !isHovering) {
        if (currentScroll > lastScroll && currentScroll > 100) {
          header?.classList.add("-translate-y-full");
        } else {
          header?.classList.remove("-translate-y-full");
        }
      } else {
        // Ensure header stays visible if interacting
        header?.classList.remove("-translate-y-full");
      }

      lastScroll = currentScroll;
    };

    window.removeEventListener("scroll", handleScroll);
    window.addEventListener("scroll", handleScroll, { passive: true });
  }

  // Initialize on load and after Astro swaps
  document.addEventListener("astro:page-load", initHeader);
  document.addEventListener("DOMContentLoaded", initHeader);
</script>
