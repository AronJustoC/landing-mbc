---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { services as servicesData } from "../consts/services";
import SectionHero from "./SectionHero.astro";
import servicesHeaderBg from "../assets/headers/services_header_background.png";

// Dynamic Layout to map images to services from consts
import dinamicoEstructuralImg from "../assets/services/analisis-dinamico-estructural.png";
import analisisVibratorioImg from "../assets/services/analisis-vibratorio.png";
import monitoreoCondicionImg from "../assets/services/monitoreo-de-condicion.png";
import inspeccionIntegridadImg from "../assets/services/inspeccion-de-integridad-estructural.jpeg";
import confiabilidadImg from "../assets/services/ingenieria-de-confiabilidad.jpeg";
import monitoreoKpisImg from "../assets/services/monitoreo-kpis.png";
import estudioFrfImg from "../assets/services/estudio-de-funcion-de-respuesta-en-frecuencia.png";
import exposicionHumanaImg from "../assets/services/exposicion-humana.png";

// Helper to map IDs to imported images
const imageMap: Record<string, ImageMetadata> = {
    "analisis-dinamico-estructural": dinamicoEstructuralImg,
    "analisis-vibratorio": analisisVibratorioImg,
    "monitoreo-condicion": monitoreoCondicionImg,
    "inspeccion-integridad-estructural": inspeccionIntegridadImg,
    "ingenieria-confiabilidad": confiabilidadImg,
    "monitoreo-kpis-zarandas": monitoreoKpisImg,
    "estudio-frf": estudioFrfImg,
    "exposicion-humana": exposicionHumanaImg,
};

function getIconForService(id: string) {
  switch (id) {
    case "analisis-dinamico-estructural":
      return "lucide:waves";
    case "analisis-vibratorio":
      return "lucide:activity";
    case "monitoreo-condicion":
      return "lucide:monitor-check";
    case "inspeccion-integridad-estructural":
      return "lucide:scan-eye";
    case "ingenieria-confiabilidad":
      return "lucide:shield-check";
    case "monitoreo-kpis-zarandas":
      return "lucide:bar-chart-2"; // Or lucide:gauge
    case "estudio-frf":
      return "lucide:audio-waveform";
    case "exposicion-humana":
      return "lucide:user-check"; // Or lucide:accessibility
    default:
      return "lucide:circle";
  }
}

const services = servicesData.map((s) => ({
    ...s,
    image: imageMap[s.id],
    href: `/servicios/${s.id}`,
    icon: getIconForService(s.id),
}));
---

<section id="servicios" class="bg-[#08080A] relative overflow-hidden">
    <SectionHero
        title="Nuestros Servicios"
        subtitle="Soluciones integrales de ingeniería diseñadas para maximizar la disponibilidad, seguridad y vida útil de sus activos industriales."
        image={servicesHeaderBg}
        large={true}
        breadcrumbItems={[
            { name: "Inicio", href: "/" },
            { name: "Servicios", href: "/services", current: true },
        ]}
    />

    <!-- Tech Grid Background Pattern -->
    <div
        class="absolute inset-0 z-0 pointer-events-none opacity-[0.15] mt-[60vh]"
        style="background-image: radial-gradient(#31B0FF 1px, transparent 1px); background-size: 30px 30px; mask-image: linear-gradient(to bottom, transparent, black 10%, black 90%, transparent);"
    >
    </div>

    <!-- Dynamic Background Gradients -->
    <div
        class="absolute inset-0 overflow-hidden pointer-events-none z-0 mt-[60vh]"
    >
        <div
            class="absolute top-[10%] -left-[10%] w-[60%] h-[60%] bg-[#31B0FF]/5 blur-[120px] rounded-full"
        >
        </div>
        <div
            class="absolute bottom-[20%] right-[0%] w-[50%] h-[50%] bg-[#0099cc]/5 blur-[100px] rounded-full"
        >
        </div>
    </div>

    <div class="container mx-auto px-6 relative z-10 pt-20 max-w-7xl pb-24">
        <!-- Section Intro -->
        <div class="text-center mb-16 animate-item">
            <span class="text-[#31B0FF] font-semibold text-xs uppercase tracking-[0.3em] mb-3 block">Soluciones Especializadas</span>
            <h2 class="text-3xl lg:text-4xl font-bold text-white tracking-tight leading-tight">
                Nuestras <span class="text-gray-400">Capacidades</span>
            </h2>
            <div class="h-px w-16 bg-[#31B0FF]/40 mx-auto mt-5"></div>
        </div>

        <div class="flex flex-wrap justify-center gap-6">
            {
                services.map((service, index) => (
                    <div
                        class="animate-item group relative bg-[#0d1117] rounded-xl overflow-hidden border border-white/5 hover:border-[#31B0FF]/30 transition-all duration-500 hover:shadow-[0_10px_40px_-10px_rgba(49,176,255,0.15)] h-full w-full md:w-[calc(50%-12px)] lg:w-[calc(33.333%-16px)]"
                        style={`transition-delay: ${index * 80}ms`}
                    >
                        <article class="h-full flex flex-col">
                            <!-- Image Container -->
                            <div class="w-full h-48 relative overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-t from-[#0d1117] via-transparent to-transparent z-10" />
                                <Image
                                    src={service.image}
                                    alt={service.title}
                                    class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
                                    width={600}
                                    height={400}
                                />
                            </div>

                            <div class="p-4 flex-grow flex flex-col relative z-20">
                                <div class="mb-4 flex items-center gap-3">
                                    <div class="p-2.5 rounded-lg bg-[#31B0FF]/10 group-hover:bg-[#31B0FF]/20 transition-colors duration-300">
                                        <Icon
                                            name={service.icon}
                                            class="w-5 h-5 text-[#31B0FF]"
                                        />
                                    </div>
                                    <div class="h-px flex-1 bg-white/5" />
                                </div>

                                <h3 class="text-lg font-semibold text-white group-hover:text-[#31B0FF] transition-colors tracking-tight line-clamp-2 h-[3.5rem] flex items-center">
                                    {service.title}
                                </h3>
                                
                                <p class="text-gray-400 text-sm leading-relaxed  line-clamp-2 h-[2.5rem] mb-4">
                                    {service.shortDescription}
                                </p>

                                <a
                                    href={service.href}
                                    class="inline-flex items-center gap-2 text-sm font-medium text-[#31B0FF] hover:text-white transition-colors mt-auto group/link"
                                >
                                    <span class="relative after:absolute after:bottom-0 after:left-0 after:w-0 after:h-px after:bg-white group-hover/link:after:w-full after:transition-all after:duration-300">
                                        Ver detalles
                                    </span>
                                    <Icon name="lucide:arrow-right" class="w-4 h-4 group-hover/link:translate-x-1 transition-transform duration-300" />
                                </a>
                            </div>
                        </article>
                    </div>
                ))
            }
        </div>
    </div>

    <style>
        .animate-item {
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        }

        .animate-item.is-visible {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
</section>

<script>
    const observerOptions = {
        threshold: 0.1,
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                entry.target.classList.add("is-visible");
            }
        });
    }, observerOptions);

    document.querySelectorAll(".animate-item").forEach((item) => {
        observer.observe(item);
    });
</script>
