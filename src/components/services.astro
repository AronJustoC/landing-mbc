---
import AnimateItem from "./AnimateItem.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { services as servicesData } from "../consts/services";
import SectionHero from "./SectionHero.astro";
import servicesHeaderBg from "../assets/headers/services_header_background.png";

// Service Images
import dinamicoEstructuralImg from "../assets/services/analisis-dinamico-estructural.png";
import analisisVibratorioImg from "../assets/services/analisis-vibratorio.png";
import monitoreoCondicionImg from "../assets/services/monitoreo-condicion.png";
import inspeccionIntegridadImg from "../assets/services/inspeccion-integridad.png";
import confiabilidadImg from "../assets/services/ingenieria-confiabilidad.png";
import monitoreoKpisImg from "../assets/services/monitoreo-kpis.png";
import estudioFrfImg from "../assets/services/estudio-frf.png";
import exposicionHumanaImg from "../assets/services/exposicion-humana.png";

const imageMap: Record<string, ImageMetadata> = {
    "analisis-dinamico-estructural": dinamicoEstructuralImg,
    "analisis-vibratorio": analisisVibratorioImg,
    "monitoreo-condicion": monitoreoCondicionImg,
    "inspeccion-integridad-estructural": inspeccionIntegridadImg,
    "ingenieria-confiabilidad": confiabilidadImg,
    "monitoreo-kpis-zarandas": monitoreoKpisImg,
    "estudio-frf": estudioFrfImg,
    "exposicion-humana": exposicionHumanaImg,
};

const services = servicesData.map((s) => ({
    ...s,
    href: `/servicios/${s.id}`,
    image: imageMap[s.id],
}));

interface Props {
    showHero?: boolean;
}

const { showHero = true } = Astro.props;
---

<section id="servicios" class="bg-[#08080A] relative overflow-hidden">
    {showHero && (
        <SectionHero
            title="Nuestros Servicios"
            category="Soluciones Industriales"
            subtitle="Ingeniería avanzada diseñada para maximizar la disponibilidad y vida útil de sus activos críticos."
            image={servicesHeaderBg}
            large={true}
            breadcrumbItems={[
                { name: "Inicio", href: "/" },
                { name: "Servicios", href: "/services", current: true },
            ]}
        />
    )}

    <div class="container mx-auto px-6 relative z-10 pt-24 max-w-7xl pb-32">
        <!-- Section Intro - Only show if not using the full Hero -->
        {!showHero && (
            <div class="text-center mb-24">
                <AnimateItem variant="fade-up" delay={0.1}>
                    <span class="text-[#31B0FF] font-bold text-xs uppercase tracking-[0.4em] mb-4 block">Especialidades</span>
                    <h2 class="text-4xl lg:text-6xl font-black text-white tracking-tight leading-none mb-8">
                        INGENIERÍA <span class="text-gray-500">PREDICTIVA</span>
                    </h2>
                    <div class="h-1 w-24 bg-[#31B0FF]/30 mx-auto rounded-full"></div>
                </AnimateItem>
            </div>
        )}

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                services.map((service, index) => (
                    <AnimateItem 
                        variant="fade-up" 
                        delay={index * 0.1} 
                        class="group"
                    >
                        <article class="h-full bg-[#0d1117] border border-white/5 rounded-[2.5rem] overflow-hidden transition-all duration-500 hover:border-[#31B0FF]/30 hover:shadow-[0_20px_50px_-20px_rgba(49,176,255,0.15)] flex flex-col">
                            <!-- Image Header -->
                            <div class="relative h-64 overflow-hidden">
                                <Image
                                    src={service.image}
                                    alt={service.title}
                                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                    width={600}
                                    height={400}
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-[#0d1117] via-transparent to-transparent opacity-60"></div>
                            </div>

                            <!-- Content -->
                            <div class="p-10 pt-8 flex-grow flex flex-col">
                                <!-- Icon Area -->
                                <div class="flex items-center gap-6 mb-8">
                                    <div class="w-14 h-14 rounded-2xl bg-[#31B0FF]/10 flex items-center justify-center text-[#31B0FF] shadow-[0_0_20px_rgba(49,176,255,0.1)] border border-[#31B0FF]/10 group-hover:bg-[#31B0FF] group-hover:text-white transition-all duration-500">
                                        <Icon
                                            name={service.icon}
                                            class="w-7 h-7"
                                        />
                                    </div>
                                    <div class="h-px flex-1 bg-white/10 group-hover:bg-[#31B0FF]/20 transition-colors"></div>
                                </div>

                                <h3 class="text-2xl font-bold text-white mb-6 tracking-tight leading-snug group-hover:text-[#31B0FF] transition-colors">
                                    {service.title}
                                </h3>
                                
                                <p class="text-gray-400 text-sm leading-relaxed mb-10 font-light">
                                    {service.shortDescription}
                                </p>

                                <div class="mt-auto pt-6 border-t border-white/5 flex justify-between items-center">
                                    <a
                                        href={service.href}
                                        class="inline-flex items-center gap-3 text-xs font-bold text-gray-500 hover:text-white uppercase tracking-widest transition-all group/link"
                                    >
                                        <span>Explorar</span>
                                        <div class="p-2 rounded-full bg-white/5 group-hover/link:bg-[#31B0FF] group-hover/link:text-white transition-all">
                                            <Icon name="lucide:arrow-right" class="w-3 h-3" />
                                        </div>
                                    </a>
                                    <span class="text-[10px] font-black text-[#31B0FF]/20 uppercase tracking-[0.3em] group-hover:text-[#31B0FF]/40 transition-colors">
                                        0{index + 1}
                                    </span>
                                </div>
                            </div>
                        </article>
                    </AnimateItem>
                ))
            }
        </div>
    </div>
</section>
