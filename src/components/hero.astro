<style>

  /* Igual lógica que tu footer: reveal por is-visible */
  .animate-item {
    opacity: 0;
    transform: translateY(2rem);
    transition-property: opacity, transform;
    transition-duration: 0.8s;
    transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  #main-hero.is-visible .animate-item {
    opacity: 1;
    transform: translateY(0);
  }

  /* Stagger */
  #main-hero.is-visible .animate-item:nth-child(1) { transition-delay: 0.10s; }
  #main-hero.is-visible .animate-item:nth-child(2) { transition-delay: 0.18s; }
  #main-hero.is-visible .animate-item:nth-child(3) { transition-delay: 0.26s; }
  #main-hero.is-visible .animate-item:nth-child(4) { transition-delay: 0.34s; }
  #main-hero.is-visible .animate-item:nth-child(5) { transition-delay: 0.42s; }

  .glass-card{
    border-radius: 14px;
    padding: 14px 14px;
    border: 1px solid rgba(0,212,255,0.18);
    background: rgba(10,10,12,0.35);
    backdrop-filter: blur(10px);
    box-shadow: 0 0 22px rgba(0,212,255,0.08);
    transition: all .3s ease;
  }
  .glass-card:hover{
    transform: translateY(-2px);
    border-color: rgba(0,212,255,0.35);
    box-shadow: 0 0 28px rgba(0,212,255,0.14);
  }
  .mini-row{
    display:flex;
    align-items:center;
    justify-content:space-between;
    padding: 10px 12px;
    border-radius: 12px;
    border: 1px solid rgba(148,163,184,0.15);
    background: rgba(2,6,23,0.25);
  }
  
</style>

<script>
  // Auto-reveal al entrar en viewport (igual idea del footer con is-visible)
  const el = document.getElementById("main-hero");
  if (el) {
    const io = new IntersectionObserver(
      ([entry]) => entry.isIntersecting && el.classList.add("is-visible"),
      { threshold: 0.15 }
    );
    io.observe(el);
  }
</script>

<script>
  function initHeroSlider() {
    const slider = document.querySelector(".hero-slider") as HTMLElement | null;
    if (!slider) return;

    if (slider.dataset.started === "1") return;
    slider.dataset.started = "1";

    const slides = Array.from(
      slider.querySelectorAll(".hero-slide")
    ) as HTMLElement[];

    const interval = Number(slider.dataset.interval || 5000);
    let current = 0;

    if (slides.length > 1) {
      setInterval(() => {
        slides[current].classList.remove("opacity-80", "scale-100");
        slides[current].classList.add("opacity-0", "scale-105");

        current = (current + 1) % slides.length;

        slides[current].classList.remove("opacity-0", "scale-105");
        slides[current].classList.add("opacity-80", "scale-100");
      }, interval);
    }
  }

  document.addEventListener("DOMContentLoaded", initHeroSlider);
  document.addEventListener("astro:page-load", initHeroSlider);
</script>
