>
  {/* Background slider */}
  <div class="absolute inset-0 z-0 overflow-hidden">
    <div class="hero-slider absolute inset-0" data-interval="2500">
    {slides.map((slide, i) => (
      <img
        src={slide.src}
        alt={slide.alt}
        class={`hero-slide absolute inset-0 h-full w-full object-cover object-center
        transition-all duration-[1200ms] ease-in-out
        ${i === 0 ? "opacity-80 scale-100" : "opacity-0 scale-105"}`}
        loading={i === 0 ? "eager" : "lazy"}
        decoding="async"
      />
    ))}
  </div>
    {/* Dark overlay + left focus */}
    <div class="absolute inset-0 bg-gradient-to-r from-black/85 via-black/55 to-black/25"></div>
    {/* Subtle tech haze */}
