<style>

  /* Igual lógica que tu footer: reveal por is-visible */
  .animate-item {
    opacity: 0;
    transform: translateY(2rem);
    transition-property: opacity, transform;
    transition-duration: 0.8s;
    transition-timing-function: cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
  .reveal-section.is-visible .animate-item {
    opacity: 1;
    transform: translateY(0);
  }

  /* Stagger */
  .reveal-section.is-visible .animate-item:nth-child(1) { transition-delay: 0.10s; }
  .reveal-section.is-visible .animate-item:nth-child(2) { transition-delay: 0.18s; }
  .reveal-section.is-visible .animate-item:nth-child(3) { transition-delay: 0.26s; }
  .reveal-section.is-visible .animate-item:nth-child(4) { transition-delay: 0.34s; }
  .reveal-section.is-visible .animate-item:nth-child(5) { transition-delay: 0.42s; }

  .glass-card{
