---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import image1 from "../assets/about/about_4.png";
import about1 from "../assets/about/about_1.png";
import about2 from "../assets/about/about_2.png";
import about3 from "../assets/about/about-3.png";
import aboutHeaderBg from "../assets/headers/about_header_background.png";
import brochure from "../assets/about/Brouchure_MBC_2026.pdf";
import SectionHero from "./SectionHero.astro";
import BackgroundGrid from "./BackgroundGrid.astro";
import Profesional2 from "../assets/about/Profesional-PPY.jpeg";
import Profesional1 from "../assets/about/Profesional-ACC.png";
import Profesional3 from "../assets/about/Profesional-ALD.png";
import Profesional4 from "../assets/about/Profesional-YPI.png";
import BrochureModal from "./BrochureModal.astro";


const TEAM = [
    {
        name: "Ing. Alexander Alvarez",
        role: "Gerente Técnico",
        specialties: ["Ingeniería de Confiabilidad (CMRP)", "Gestión de Activos"],
        image: Profesional2,
        bio: "Experto en implementación de estrategias RCM y gestión de activos. Enfocado en la optimización de costos y mejora de la disponibilidad operativa mediante análisis de datos.",
        linkedin: "https://www.linkedin.com",
    },
    {
        name: "Ing. Percy Pacco",
        role: "Gerente Técnico",
        specialties: ["Analista de Vibraciones Cat. III", "Gestión de Mantenimiento"],
        image: Profesional1,
        bio: "Líder con más de 6 años de experiencia en mantenimiento predictivo. Especialista en diagnóstico de maquinaria crítica en minería y gran industria, liderando equipos de alto rendimiento.",
        linkedin: "https://www.linkedin.com",
    },
    /*
    {
        name: "Bach. Especialista 1",
        role: "Analista Senior",
        specialties: ["Analista de Vibraciones Cat. II", "Ultrasonido Acústico Nivel II"],
        image: Profesional3,
        bio: "Supervisor de campo con amplia trayectoria en ensayos no destructivos. Garantiza la calidad y seguridad en cada intervención técnica, asegurando el cumplimiento de normativas internacionales.",
        linkedin: "https://www.linkedin.com",
    },
    {
        name: "Bach. Especialista 2",
        role: "Analista Senior",
        specialties: ["Análisis Modal Experimental", "Análisis ODS"],
        image: Profesional4,
        bio: "Especialista en dinámica estructural y solución de problemas de resonancia. Utiliza tecnología avanzada para modelamiento y simulación de comportamiento de activos.",
        linkedin: "https://www.linkedin.com",
    },
    */
];

interface Props {
    showHero?: boolean;
}

const { showHero = true } = Astro.props;
---

<section id="nosotros" class="bg-[#08080A] relative overflow-hidden">
  {showHero && (
    <SectionHero
      title="Sobre Nosotros"
      category="Identidad Corporativa"
      subtitle="Expertos en confiabilidad y mantenimiento predictivo comprometidos con la excelencia operativa."
      image={aboutHeaderBg}
      large={true}
      breadcrumbItems={[
        { name: "Inicio", href: "/" },
        { name: "Nosotros", href: "/about", current: true },
      ]}
    />
  )}

  <!-- Tech Grid Background Pattern -->
  <div
    class="absolute inset-0 z-0 pointer-events-none opacity-[0.15] mt-[60vh]"
    style="background-image: radial-gradient(#31B0FF 1px, transparent 1px); background-size: 30px 30px; mask-image: linear-gradient(to bottom, transparent, black 10%, black 90%, transparent);"
  >
  </div>

  <!-- Dynamic Background Gradients -->
  <div
    class="absolute inset-0 overflow-hidden pointer-events-none z-0 mt-[60vh]"
  >
    <div
      class="absolute top-[10%] -left-[10%] w-[60%] h-[60%] bg-[#31B0FF]/5 blur-[120px] rounded-full"
    >
    </div>
    <div
      class="absolute bottom-[20%] right-[0%] w-[50%] h-[50%] bg-[#0099cc]/5 blur-[100px] rounded-full"
    >
    </div>
  </div>

  <div
    class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10 pt-20 pb-10"
  >
    <!-- 2. Trayectoria Empresarial (History) - Estilo Ejecutivo -->
    <div
      id="trayectoria"
      class="bg-[#0d1117] border border-white/5 rounded-[2.5rem] p-8 lg:p-12 mb-24 relative overflow-hidden animate-item transition-all duration-700 hover:border-[#31B0FF]/20 group"
    >
      <!-- Background Glow -->
      <div class="absolute -top-24 -right-24 w-96 h-96 bg-[#31B0FF]/5 blur-[100px] rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-1000"></div>

      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center relative z-10">
        <div class="order-2 lg:order-1">
          <div class="flex items-center gap-4 mb-6">
            <div class="h-px w-8 bg-[#31B0FF]"></div>
            <h2
              class="text-[#31B0FF] font-bold text-xs uppercase tracking-[0.4em]"
            >
              Nuestra Historia
            </h2>
          </div>
          <h3
            class="text-3xl lg:text-5xl font-black text-white mb-8 leading-tight tracking-tight"
          >
            Trayectoria <span class="text-gray-500">Empresarial</span>
          </h3>
          <div class="space-y-6 text-gray-400 leading-relaxed text-base font-light">
            <p>
              <strong class="text-white font-semibold">MBC</strong> se ha consolidado
              como un socio estratégico líder en ingeniería predictiva para las industrias
              más exigentes. Nuestra evolución constante nos permite ofrecer tecnologías
              de vanguardia y metodologías avanzadas.
            </p>
            <div
              class="pl-6 border-l-2 border-[#31B0FF]/30 italic text-gray-400 text-sm py-2 bg-white/[0.02] rounded-r-xl"
            >
              "Ingenieros especializados en mantenimiento, análisis vibracional
              y confiabilidad, comprometidos con la excelencia."
            </div>
            <p>
              Combinamos rigor académico con vasta experiencia de campo para
              resolver desafíos complejos, asegurando la continuidad operativa
              de nuestros clientes.
            </p>

            <div class="pt-6">
              <button
                data-modal-target="brochure-modal-about"
                class="inline-flex items-center gap-3 px-8 py-4 bg-[#31B0FF] text-white text-xs font-bold uppercase tracking-widest rounded-2xl hover:bg-[#2196F3] transition-all duration-500 shadow-xl shadow-[#31B0FF]/20 group/btn btn-glow"
              >
                <Icon
                  name="lucide:file-text"
                  class="w-4 h-4 group-hover:scale-110 transition-transform"
                />
                <span>Explorar Brochure</span>
              </button>
            </div>
          </div>
        </div>
        <div class="order-1 lg:order-2 relative group/img">
          <div class="absolute -inset-4 bg-[#31B0FF]/10 blur-2xl rounded-[3rem] opacity-0 group-hover/img:opacity-100 transition-opacity duration-700"></div>
          <Image
            src={image1}
            alt="Equipo MBC"
            class="relative rounded-[2rem] w-full object-cover aspect-[4/3] border border-white/10 shadow-2xl transition-all duration-700 group-hover/img:scale-[1.02]"
            width={800}
            height={600}
          />
        </div>
      </div>
    </div>

    <!-- 3. Misión y Visión - Estilo Ejecutivo -->
    <div id="mision-vision" class="grid md:grid-cols-2 gap-8 mb-32">
      <!-- Misión -->
      <div
        class="animate-item group relative bg-[#0d1117] rounded-[2rem] overflow-hidden border border-white/5 hover:border-[#31B0FF]/30 transition-all duration-500 hover:shadow-[0_20px_50px_-20px_rgba(49,176,255,0.15)]"
      >
        <div class="p-10 h-full">
          <div
            class="w-16 h-16 rounded-2xl bg-[#31B0FF]/10 flex items-center justify-center text-[#31B0FF] mb-8 border border-[#31B0FF]/10 group-hover:bg-[#31B0FF] group-hover:text-white transition-all duration-500"
          >
            <Icon name="lucide:target" class="w-8 h-8" />
          </div>
          <h2
            class="text-2xl font-bold text-white mb-4 tracking-tight group-hover:text-[#31B0FF] transition-colors"
          >
            Nuestra Misión
          </h2>
          <p class="text-gray-400 leading-relaxed text-base font-light">
            Brindar soluciones integrales de ingeniería de mantenimiento que
            maximicen la disponibilidad y seguridad de los activos industriales,
            fundamentadas en mediciones precisas y análisis riguroso.
          </p>
        </div>
      </div>

      <!-- Visión -->
      <div
        class="animate-item group relative bg-[#0d1117] rounded-[2rem] overflow-hidden border border-white/5 hover:border-[#31B0FF]/30 transition-all duration-500 hover:shadow-[0_20px_50px_-20px_rgba(49,176,255,0.15)]"
      >
        <div class="p-10 h-full">
          <div
            class="w-16 h-16 rounded-2xl bg-[#31B0FF]/10 flex items-center justify-center text-[#31B0FF] mb-8 border border-[#31B0FF]/10 group-hover:bg-[#31B0FF] group-hover:text-white transition-all duration-500"
          >
            <Icon name="lucide:eye" class="w-8 h-8" />
          </div>
          <h2
            class="text-2xl font-bold text-white mb-4 tracking-tight group-hover:text-[#31B0FF] transition-colors"
          >
            Nuestra Visión
          </h2>
          <p class="text-gray-400 leading-relaxed text-base font-light">
            Posicionarnos como el referente indiscutible en ingeniería de
            confiabilidad y monitoreo de condición, reconocidos por nuestra
            capacidad técnica y excelencia operativa.
          </p>
        </div>
      </div>
    </div>

    <!-- 4. Nuestros Pilares (Cards Ejecutivas) -->
    <div id="pilares" class="mb-20">
      <div class="text-center mb-16 animate-item">
        <span
          class="text-[#31B0FF] font-semibold text-xs uppercase tracking-[0.3em] mb-3 block"
          >Excelencia Operativa</span
        >
        <h2
          class="text-3xl lg:text-4xl font-bold text-white tracking-tight leading-tight"
        >
          Nuestros <span class="text-gray-400">Pilares</span>
        </h2>
        <div class="h-px w-16 bg-[#31B0FF]/40 mx-auto mt-5"></div>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <!-- Card 1 -->
        <div
          class="animate-item group relative bg-[#0d1117] rounded-xl overflow-hidden border border-white/5 hover:border-[#31B0FF]/30 transition-all duration-500 hover:shadow-[0_10px_40px_-10px_rgba(49,176,255,0.15)]"
        >
          <article class="h-full flex flex-col">
            <div class="relative h-48 overflow-hidden">
              <div
                class="absolute inset-0 bg-gradient-to-t from-[#0d1117] via-transparent to-transparent z-10"
              >
              </div>
              <Image
                src={about1}
                alt="Servicios"
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
              />
            </div>
            <div class="p-6 flex-grow">
              <div class="mb-4 flex items-center gap-3">
                <div
                  class="p-2.5 rounded-lg bg-[#31B0FF]/10 group-hover:bg-[#31B0FF]/20 transition-colors duration-300"
                >
                  <Icon
                    name="lucide:briefcase"
                    class="w-5 h-5 text-[#31B0FF]"
                  />
                </div>
                <div class="h-px flex-1 bg-white/5"></div>
              </div>
              <h3
                class="text-lg font-semibold text-white mb-3 group-hover:text-[#31B0FF] transition-colors tracking-tight"
              >
                Servicios Especializados
              </h3>
              <ul class="space-y-2">
                <li class="flex items-center gap-2 text-gray-400 text-sm">
                  <div class="w-1 h-1 rounded-full bg-[#31B0FF]"></div>
                  <span>Predictivo & Confiabilidad</span>
                </li>
                <li class="flex items-center gap-2 text-gray-400 text-sm">
                  <div class="w-1 h-1 rounded-full bg-[#31B0FF]"></div>
                  <span>Análisis de Vibraciones</span>
                </li>
              </ul>
            </div>
          </article>
        </div>

        <!-- Card 2 -->
        <div
          class="animate-item group relative bg-[#0d1117] rounded-xl overflow-hidden border border-[#31B0FF]/20 hover:border-[#31B0FF]/40 transition-all duration-500 hover:shadow-[0_10px_40px_-10px_rgba(49,176,255,0.2)]"
        >
          <article class="h-full flex flex-col">
            <div class="relative h-48 overflow-hidden">
              <div
                class="absolute inset-0 bg-gradient-to-t from-[#0d1117] via-transparent to-transparent z-10"
              >
              </div>
              <Image
                src={about2}
                alt="Equipo"
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
              />
            </div>
            <div class="p-6 flex-grow">
              <div class="mb-4 flex items-center gap-3">
                <div
                  class="p-2.5 rounded-lg bg-[#31B0FF]/10 group-hover:bg-[#31B0FF]/20 transition-colors duration-300"
                >
                  <Icon name="lucide:award" class="w-5 h-5 text-[#31B0FF]" />
                </div>
                <div class="h-px flex-1 bg-white/5"></div>
              </div>
              <h3
                class="text-lg font-semibold text-white mb-3 group-hover:text-[#31B0FF] transition-colors tracking-tight"
              >
                Equipo Certificado
              </h3>
              <ul class="space-y-2">
                <li class="flex items-center gap-2 text-gray-400 text-sm">
                  <Icon
                    name="lucide:check-circle-2"
                    class="w-4 h-4 text-[#31B0FF]"
                  />
                  <span>Mobius Institute Categorías I - IV</span>
                </li>
                <li class="flex items-center gap-2 text-gray-400 text-sm">
                  <Icon
                    name="lucide:check-circle-2"
                    class="w-4 h-4 text-[#31B0FF]"
                  />
                  <span>Experiencia Multinacional</span>
                </li>
              </ul>
            </div>
          </article>
        </div>

        <!-- Card 3 -->
        <div
          class="animate-item group relative bg-[#0d1117] rounded-xl overflow-hidden border border-white/5 hover:border-[#31B0FF]/30 transition-all duration-500 hover:shadow-[0_10px_40px_-10px_rgba(49,176,255,0.15)]"
        >
          <article class="h-full flex flex-col">
            <div class="relative h-48 overflow-hidden">
              <div
                class="absolute inset-0 bg-gradient-to-t from-[#0d1117] via-transparent to-transparent z-10"
              >
              </div>
              <Image
                src={about3}
                alt="Tecnología"
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
              />
            </div>
            <div class="p-6 flex-grow">
              <div class="mb-4 flex items-center gap-3">
                <div
                  class="p-2.5 rounded-lg bg-[#31B0FF]/10 group-hover:bg-[#31B0FF]/20 transition-colors duration-300"
                >
                  <Icon name="lucide:cpu" class="w-5 h-5 text-[#31B0FF]" />
                </div>
                <div class="h-px flex-1 bg-white/5"></div>
              </div>
              <h3
                class="text-lg font-semibold text-white mb-3 group-hover:text-[#31B0FF] transition-colors tracking-tight"
              >
                Tecnología 4.0
              </h3>
              <ul class="space-y-2">
                <li class="flex items-center gap-2 text-gray-400 text-sm">
                  <div class="w-1 h-1 rounded-full bg-[#31B0FF]"></div>
                  <span>Sistemas de Monitoreo IoT</span>
                </li>
                <li class="flex items-center gap-2 text-gray-400 text-sm">
                  <div class="w-1 h-1 rounded-full bg-[#31B0FF]"></div>
                  <span>Software de Diagnóstico</span>
                </li>
              </ul>
            </div>
          </article>
        </div>
      </div>
    </div>

    <!-- 5. Nuestro Equipo -->
    <div id="equipo" class="mb-20">
      <div class="text-center mb-16 animate-item">
        <span
          class="text-[#31B0FF] font-semibold text-xs uppercase tracking-[0.3em] mb-3 block"
          >Liderazgo Técnico</span
        >
        <h2
          class="text-3xl lg:text-4xl font-bold text-white tracking-tight leading-tight"
        >
          Profesionales a <span class="text-gray-400">Cargo</span>
        </h2>
        <div class="h-px w-16 bg-[#31B0FF]/40 mx-auto mt-5"></div>
      </div>

      <div class="space-y-32">
        {
          TEAM.map((member, index) => (
            <div class={`animate-item flex flex-col lg:flex-row gap-12 lg:gap-24 items-center ${index % 2 !== 0 ? 'lg:flex-row-reverse' : ''}`}>
              <!-- Imagen del Profesional -->
              <div class="w-full max-w-sm lg:max-w-none lg:w-5/12 relative group">
                <div class="absolute inset-0 bg-[#31B0FF]/10 blur-[80px] rounded-full opacity-0 group-hover:opacity-40 transition-opacity duration-1000"></div>
                <div class="relative rounded-[2.5rem] overflow-hidden border border-white/10 group-hover:border-[#31B0FF]/40 transition-all duration-700 shadow-2xl">
                    <div class="aspect-[4/5] relative overflow-hidden">
                         <Image
                          src={member.image}
                          alt={member.name}
                          class="w-full h-full object-cover grayscale transition-all duration-1000 group-hover:grayscale-0 group-hover:scale-105"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-[#08080A] via-transparent to-transparent opacity-60"></div>
                        
                        <!-- LinkedIn Floating Badge -->
                        <a
                          href={member.linkedin}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="absolute bottom-6 right-6 bg-[#0077b5] w-12 h-12 rounded-2xl flex items-center justify-center opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500 z-20 shadow-[0_10px_20px_rgba(0,119,181,0.3)] hover:scale-110"
                        >
                            <Icon name="lucide:linkedin" class="w-5 h-5 text-white" />
                        </a>
                    </div>
                </div>
                <!-- Technical Detail -->
                <div class={`absolute -bottom-6 ${index % 2 !== 0 ? '-left-6' : '-right-6'} w-32 h-32 border border-[#31B0FF]/10 rounded-full flex items-center justify-center pointer-events-none opacity-20 group-hover:opacity-50 transition-opacity duration-700`}>
                    <div class="w-24 h-24 border border-[#31B0FF]/20 rounded-full animate-[spin_10s_linear_infinite]"></div>
                </div>
              </div>

              <!-- Información y Biografía -->
              <div class="w-full lg:w-7/12">
                 <div class={`flex flex-col ${index % 2 !== 0 ? 'lg:items-end lg:text-right' : 'lg:items-start lg:text-left'}`}>
                    <div class="flex items-center gap-3 mb-4">
                        {index % 2 !== 0 && <div class="h-px w-6 bg-[#31B0FF]/40"></div>}
                        <span class="text-[#31B0FF] font-black text-xs tracking-[0.3em] uppercase">{member.role}</span>
                        {index % 2 === 0 && <div class="h-px w-6 bg-[#31B0FF]/40"></div>}
                    </div>
                    <h3 class="text-4xl lg:text-6xl font-black text-white mb-8 tracking-tighter leading-none">{member.name}</h3>
                    
                    <p class="text-gray-400 text-lg lg:text-xl leading-relaxed mb-10 font-light max-w-2xl">
                        {member.bio}
                    </p>
                    
                    <div class={`flex flex-wrap gap-4 ${index % 2 !== 0 ? 'lg:justify-end' : 'lg:justify-start'}`}>
                        {member.specialties.map((specialty) => (
                            <div class="inline-flex items-center gap-3 px-5 py-3 rounded-xl bg-white/[0.03] border border-white/5 hover:border-[#31B0FF]/30 hover:bg-[#31B0FF]/5 transition-all duration-300 group/spec">
                                <Icon name="lucide:shield-check" class="w-4 h-4 text-[#31B0FF] opacity-50 group-hover/spec:opacity-100 transition-opacity" />
                                <span class="text-xs md:text-sm text-gray-300 font-semibold tracking-wide">{specialty}</span>
                            </div>
                        ))}
                    </div>
                 </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <style>
    .animate-item {
      opacity: 0;
      transform: translateY(2rem);
      transition:
        opacity 0.8s ease-out,
        transform 0.8s ease-out;
    }
    .animate-item.is-visible {
      opacity: 1;
      transform: translateY(0);
    }

    /* Holographic Border Effect */
    @keyframes border-rotate {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }

    .holo-border::before {
      content: "";
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: conic-gradient(
        transparent,
        transparent,
        transparent,
        #31b0ff,
        transparent,
        transparent,
        transparent,
        #22d3ee
      );
      animation: border-rotate 4s linear infinite;
    }
  </style>

  <script>
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("is-visible");
          }
        });
      },
      { threshold: 0.1 },
    );

    document
      .querySelectorAll(".animate-item")
      .forEach((el) => observer.observe(el));
  </script>

  <BrochureModal pdfUrl={brochure} id="brochure-modal-about" />
</section>
