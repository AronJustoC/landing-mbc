---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import image1 from "../assets/about/about_4.png";
import image2 from "../assets/about/about_2.png";
import about1 from "../assets/about/about_1.png";
import about2 from "../assets/about/about_2.png";
import about3 from "../assets/about/about-3.png";
---

<section
  id="nosotros"
  class="relative overflow-hidden bg-gradient-to-br from-[#08080A] via-[#0d1216] to-[#151922] pt-40"
>
  <!-- Background Solid Color -->
  <div class="absolute inset-0 z-0 bg-[#08080A]"></div>

  <!-- Dynamic Background Gradients -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none z-0">
    <div
      class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-teal-900/20 blur-[120px] rounded-full"
    >
    </div>
    <div
      class="absolute top-[20%] right-[0%] w-[40%] h-[40%] bg-indigo-900/10 blur-[100px] rounded-full"
    >
    </div>
    <div
      class="absolute -bottom-[10%] left-[20%] w-[60%] h-[40%] bg-[#08080A] blur-[80px]"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
    <!-- Header Section -->
    <div class="max-w-3xl mx-auto text-center mb-20 animate-item">
      <div
        class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full border border-teal-500/30 bg-teal-900/20 backdrop-blur-md mb-6"
      >
        <Icon name="lucide:users" class="w-4 h-4 text-teal-400" />
        <span class="text-xs font-bold tracking-widest text-teal-200 uppercase"
          >Sobre Nosotros</span
        >
      </div>
      <h1
        class="text-3xl md:text-4xl lg:text-5xl font-semibold tracking-tight text-white mb-6"
      >
        Ingeniería Predictiva <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-teal-400 to-indigo-500"
          >de Clase Mundial</span
        >
      </h1>
      <p class="text-base md:text-lg text-gray-400 leading-relaxed">
        MBC Predictive: Innovación y precisión en ingeniería dinámica para
        maximizar la confiabilidad de sus activos críticos en Sudamérica y el
        mundo.
      </p>
    </div>

    <!-- User Research / Ecosystem Section -->
    <div class="mb-32 relative">
      <!-- Connecting Line (Desktop) -->
      <div
        class="hidden md:block absolute top-[280px] left-[16%] right-[16%] h-0.5 bg-gradient-to-r from-teal-500/0 via-indigo-400/50 to-teal-500/0 z-0"
      >
      </div>

      <div class="grid md:grid-cols-3 gap-8 relative z-10">
        <!-- Card 1: Sectores -->
        <div class="animate-item group">
          <div
            class="h-full flex flex-col rounded-2xl bg-[#0d1216]/80 backdrop-blur-xl border border-white/10 shadow-[0_0_50px_rgba(0,0,0,0.6)] hover:border-teal-500/50 transition-all duration-300 group-hover:shadow-[0_0_20px_rgba(20,184,166,0.2)] overflow-hidden"
          >
            <!-- Image Top -->
            <div class="w-full h-48 relative overflow-hidden">
              <div
                class="absolute inset-0 bg-gradient-to-t from-[#0d1216] via-transparent to-transparent z-10"
              >
              </div>
              <Image
                src={about1}
                alt="Sectores Industriales"
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
              />
            </div>

            <div class="p-8 pt-6 flex-grow flex flex-col">
              <div
                class="w-12 h-12 rounded-lg bg-gray-900/80 flex items-center justify-center text-teal-400 border border-white/5 mb-6 group-hover:border-teal-500/50 group-hover:shadow-[0_0_15px_rgba(20,184,166,0.15)] transition-all duration-300 relative z-20"
              >
                <Icon name="lucide:factory" class="w-6 h-6" />
              </div>
              <h3 class="text-xl font-semibold text-white tracking-tight mb-2">
                Sectores Industriales
              </h3>
              <!-- Underline decoration -->
              <div
                class="h-1 w-12 bg-gradient-to-r from-teal-400 to-indigo-600 rounded-full mb-4"
              >
              </div>

              <ul class="space-y-3 text-sm text-gray-300">
                <li class="flex gap-3">
                  <div
                    class="w-1.5 h-1.5 rounded-full bg-indigo-400 mt-1.5 shrink-0"
                  >
                  </div>Minería de Gran Escala
                </li>
                <li class="flex gap-3">
                  <div
                    class="w-1.5 h-1.5 rounded-full bg-indigo-400 mt-1.5 shrink-0"
                  >
                  </div>Generación de Energía
                </li>
                <li class="flex gap-3">
                  <div
                    class="w-1.5 h-1.5 rounded-full bg-indigo-400 mt-1.5 shrink-0"
                  >
                  </div>Oil & Gas
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Card 2: Personas (Focus) -->
        <div class="animate-item group md:-mt-8">
          <div
            class="h-full flex flex-col rounded-2xl bg-[#0d1216] border border-teal-500/30 shadow-[0_0_60px_rgba(20,184,166,0.1)] relative overflow-hidden"
          >
            <!-- Image Top -->
            <div class="w-full h-48 relative overflow-hidden">
              <div
                class="absolute inset-0 bg-gradient-to-t from-[#0d1216] via-transparent to-transparent z-10"
              >
              </div>
              <Image
                src={about2}
                alt="Capital Humano"
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
              />
            </div>

            <div
              class="absolute top-48 left-0 w-full h-1 bg-gradient-to-r from-transparent via-teal-400 to-transparent opacity-50"
            >
            </div>

            <div class="p-8 pt-6 flex-grow flex flex-col">
              <div
                class="flex items-center justify-center w-14 h-14 rounded-xl bg-teal-500/10 text-teal-300 mb-6 mx-auto border border-teal-500/20 relative z-20"
              >
                <Icon name="lucide:users" class="w-7 h-7" />
              </div>
              <h3 class="text-2xl font-bold text-center text-white mb-2">
                Capital Humano
              </h3>
              <p
                class="text-center text-teal-400 font-bold text-xs uppercase tracking-widest mb-6"
              >
                Expertos Certificados
              </p>

              <ul
                class="space-y-3 text-sm text-gray-300 border-t border-white/5 pt-6"
              >
                <li class="flex items-center gap-3">
                  <Icon name="lucide:check" class="w-4 h-4 text-teal-400" />
                  Vibration Institute USA (Cat II & III)
                </li>
                <li class="flex items-center gap-3">
                  <Icon name="lucide:check" class="w-4 h-4 text-teal-400" />
                  Ingenieros de Integridad Estructural
                </li>
                <li class="flex items-center gap-3">
                  <Icon name="lucide:check" class="w-4 h-4 text-teal-400" />
                  Especialistas en Dinámica de Fluidos
                </li>
                <li class="flex items-center gap-3">
                  <Icon name="lucide:check" class="w-4 h-4 text-teal-400" />
                  Consultores Senior en Mantenimiento
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Card 3: Necesidades -->
        <div class="animate-item group">
          <div
            class="h-full flex flex-col rounded-2xl bg-[#0d1216]/80 backdrop-blur-xl border border-white/10 shadow-[0_0_50px_rgba(0,0,0,0.6)] hover:border-teal-500/50 transition-all duration-300 group-hover:shadow-[0_0_20px_rgba(20,184,166,0.2)] overflow-hidden"
          >
            <!-- Image Top -->
            <div class="w-full h-48 relative overflow-hidden">
              <div
                class="absolute inset-0 bg-gradient-to-t from-[#0d1216] via-transparent to-transparent z-10"
              >
              </div>
              <Image
                src={about3}
                alt="Nuestras Soluciones"
                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
              />
            </div>

            <div class="p-8 pt-6 flex-grow flex flex-col">
              <div
                class="w-12 h-12 rounded-lg bg-gray-900/80 flex items-center justify-center text-teal-400 border border-white/5 mb-6 group-hover:border-teal-500/50 group-hover:shadow-[0_0_15px_rgba(20,184,166,0.15)] transition-all duration-300 relative z-20"
              >
                <Icon name="lucide:target" class="w-6 h-6" />
              </div>
              <h3 class="text-xl font-semibold text-white tracking-tight mb-2">
                Nuestras Soluciones
              </h3>
              <!-- Underline decoration -->
              <div
                class="h-1 w-12 bg-gradient-to-r from-teal-400 to-indigo-600 rounded-full mb-4"
              >
              </div>

              <ul class="space-y-3 text-sm text-gray-300">
                <li class="flex gap-3">
                  <div
                    class="w-1.5 h-1.5 rounded-full bg-teal-400 mt-1.5 shrink-0"
                  >
                  </div>Monitoreo Remoto & IoT
                </li>
                <li class="flex gap-3">
                  <div
                    class="w-1.5 h-1.5 rounded-full bg-teal-400 mt-1.5 shrink-0"
                  >
                  </div>Desarrollo de Software a Medida
                </li>
                <li class="flex gap-3">
                  <div
                    class="w-1.5 h-1.5 rounded-full bg-teal-400 mt-1.5 shrink-0"
                  >
                  </div>Análisis Modal & ODS
                </li>
                <li class="flex gap-3">
                  <div
                    class="w-1.5 h-1.5 rounded-full bg-teal-400 mt-1.5 shrink-0"
                  >
                  </div>Consultoría en Confiabilidad
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Company History & Content -->
    <div class="grid md:grid-cols-2 gap-16 items-center mb-32">
      <div class="animate-item">
        <h2
          class="text-xl lg:text-2xl font-semibold text-white tracking-tight leading-tight mb-4"
        >
          Trayectoria Empresarial
        </h2>
        <!-- Decoración: Línea degradada -->
        <div
          class="h-1 w-20 bg-gradient-to-r from-teal-400 to-indigo-600 rounded-full mb-6"
        >
        </div>

        <div class="space-y-6 text-gray-400 leading-relaxed">
          <p>
            <strong class="text-white">MBC Predictive</strong> es una organización
            líder en ingeniería predictiva, consolidada como un socio estratégico
            para las industrias más exigentes. Con una sólida presencia en el mercado,
            hemos evolucionado constantemente para ofrecer tecnologías de vanguardia
            y metodologías avanzadas.
          </p>
          <div class="pl-4 border-l-2 border-teal-500/30 italic text-gray-300">
            "Nuestro equipo técnico está conformado por especialistas
            certificados de alto nivel, garantizando el cumplimiento riguroso de
            normativas internacionales ISO y estándares ANSI en cada proyecto."
          </div>
          <p>
            Nos distinguimos por combinar el rigor académico con una vasta
            experiencia de campo, lo que nos permite abordar y resolver los
            desafíos vibracionales y estructurales más complejos, asegurando la
            continuidad operativa de nuestros clientes.
          </p>
        </div>
      </div>
      <div class="animate-item relative group">
        <div
          class="absolute -inset-2 bg-gradient-to-r from-teal-500 to-indigo-500 rounded-2xl opacity-20 blur-lg group-hover:opacity-40 transition duration-500"
        >
        </div>
        <Image
          src={image1}
          alt="Equipo MBC Predictive"
          class="relative rounded-2xl shadow-2xl w-full object-cover aspect-video border border-white/5"
          width={600}
          height={400}
        />
      </div>
    </div>


    <!-- Mission & Vision Cards -->
    <div class="grid md:grid-cols-2 gap-8 mb-32">
      <div
        class="animate-item bg-[#0d1216]/80 backdrop-blur-xl border border-white/10 rounded-2xl shadow-[0_0_50px_rgba(0,0,0,0.6)] p-8 sm:p-10 hover:border-teal-500/30 transition duration-300"
      >
        <div class="flex items-center gap-4 mb-6">
          <div
            class="w-12 h-12 rounded-lg bg-gray-900/80 flex items-center justify-center text-teal-400 border border-white/5"
          >
            <Icon name="lucide:compass" class="w-6 h-6" />
          </div>
          <h2 class="text-xl font-semibold text-white tracking-tight">
            Nuestra Misión
          </h2>
        </div>
        <!-- Partial Underline -->
        <div
          class="h-1 w-16 bg-gradient-to-r from-teal-400 to-indigo-600 rounded-full mb-6"
        >
        </div>

        <p class="text-gray-400 leading-relaxed">
          Proveer soluciones de ingeniería predictiva de excelencia, integrando
          tecnología avanzada y conocimiento experto para optimizar la
          disponibilidad y seguridad de los activos industriales de nuestros
          clientes.
        </p>
      </div>
      <div
        class="animate-item bg-[#0d1216]/80 backdrop-blur-xl border border-white/10 rounded-2xl shadow-[0_0_50px_rgba(0,0,0,0.6)] p-8 sm:p-10 hover:border-indigo-500/30 transition duration-300"
      >
        <div class="flex items-center gap-4 mb-6">
          <div
            class="w-12 h-12 rounded-lg bg-gray-900/80 flex items-center justify-center text-indigo-400 border border-white/5"
          >
            <Icon name="lucide:eye" class="w-6 h-6" />
          </div>
          <h2 class="text-xl font-semibold text-white tracking-tight">
            Nuestra Visión
          </h2>
        </div>
        <!-- Partial Underline -->
        <div
          class="h-1 w-16 bg-gradient-to-r from-indigo-500 to-teal-400 rounded-full mb-6"
        >
        </div>

        <p class="text-gray-400 leading-relaxed">
          Consolidarnos como la firma líder referente en ingeniería dinámica a
          nivel global, reconocidos por nuestra capacidad de innovación, calidad
          técnica y compromiso inquebrantable con la confiabilidad industrial.
        </p>
      </div>
    </div>

    <!-- Values Compact -->
    <div
      class="max-w-5xl mx-auto rounded-3xl bg-[#0d1216]/80 backdrop-blur-xl border border-white/10 p-12 text-center animate-item shadow-[0_0_50px_rgba(0,0,0,0.6)] mb-20"
    >
      <h2
        class="text-2xl font-semibold text-white tracking-tight mb-8 inline-block"
      >
        Valores Corporativos
      </h2>
  

      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="flex flex-col items-center gap-4 group">
          <div
            class="w-16 h-16 rounded-2xl bg-gray-900/80 border border-white/5 flex items-center justify-center text-teal-400 group-hover:scale-110 group-hover:border-teal-500/30 group-hover:shadow-[0_0_15px_rgba(20,184,166,0.2)] transition-all duration-300"
          >
            <Icon name="lucide:shield" class="w-8 h-8" />
          </div>
          <h3 class="font-bold text-white tracking-wide">Integridad</h3>
        </div>
        <div class="flex flex-col items-center gap-4 group">
          <div
            class="w-16 h-16 rounded-2xl bg-gray-900/80 border border-white/5 flex items-center justify-center text-indigo-400 group-hover:scale-110 group-hover:border-indigo-500/30 group-hover:shadow-[0_0_15px_rgba(99,102,241,0.2)] transition-all duration-300"
          >
            <Icon name="lucide:heart" class="w-8 h-8" />
          </div>
          <h3 class="font-bold text-white tracking-wide">Compromiso</h3>
        </div>
        <div class="flex flex-col items-center gap-4 group">
          <div
            class="w-16 h-16 rounded-2xl bg-gray-900/80 border border-white/5 flex items-center justify-center text-teal-400 group-hover:scale-110 group-hover:border-teal-500/30 group-hover:shadow-[0_0_15px_rgba(20,184,166,0.2)] transition-all duration-300"
          >
            <Icon name="lucide:award" class="w-8 h-8" />
          </div>
          <h3 class="font-bold text-white tracking-wide">Excelencia</h3>
        </div>
        <div class="flex flex-col items-center gap-4 group">
          <div
            class="w-16 h-16 rounded-2xl bg-gray-900/80 border border-white/5 flex items-center justify-center text-indigo-400 group-hover:scale-110 group-hover:border-indigo-500/30 group-hover:shadow-[0_0_15px_rgba(99,102,241,0.2)] transition-all duration-300"
          >
            <Icon name="lucide:zap" class="w-8 h-8" />
          </div>
          <h3 class="font-bold text-white tracking-wide">Innovación</h3>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-item {
    opacity: 0;
    transform: translateY(2rem);
    transition:
      opacity 0.8s ease-out,
      transform 0.8s ease-out;
  }
  .animate-item.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("is-visible");
        }
      });
    },
    { threshold: 0.1 },
  );

  document
    .querySelectorAll(".animate-item")
    .forEach((el) => observer.observe(el));
</script>
