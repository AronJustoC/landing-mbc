---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import image1 from "../assets/image-1.jpeg";
import image2 from "../assets/image-2.jpeg";
---

<section
  id="nosotros"
  class="relative py-20 overflow-hidden bg-[#071420] text-gray-200"
>
  <!-- Dynamic Background Gradients -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div
      class="absolute -top-[10%] -left-[10%] w-[50%] h-[50%] bg-sky-900/20 blur-[120px] rounded-full"
    >
    </div>
    <div
      class="absolute top-[20%] right-[0%] w-[40%] h-[40%] bg-rose-900/10 blur-[100px] rounded-full"
    >
    </div>
    <div
      class="absolute -bottom-[10%] left-[20%] w-[60%] h-[40%] bg-[#0b2233] blur-[80px]"
    >
    </div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <!-- Header Section -->
    <div class="max-w-3xl mx-auto text-center mb-20 animate-item">
      <div
        class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full border border-sky-500/30 bg-sky-900/20 backdrop-blur-md mb-6"
      >
        <Icon name="lucide:users" class="w-4 h-4 text-sky-400" />
        <span class="text-xs font-medium tracking-wide text-sky-200 uppercase"
          >Sobre Nosotros</span
        >
      </div>
      <h1
        class="text-4xl md:text-5xl font-extrabold tracking-tight text-white mb-6"
      >
        Ingeniería Predictiva <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-rose-400"
          >Centrada en ti</span
        >
      </h1>
      <p class="text-lg text-gray-400 leading-relaxed">
        MBC Predictive Group: Más de 10 años brindando soluciones integrales en
        ingeniería dinámica para Sudamérica y el mundo.
      </p>
    </div>

    <!-- User Research / Ecosystem Section (New) -->
    <div class="mb-32 relative">
      <!-- Connecting Line (Desktop) -->
      <div
        class="hidden md:block absolute top-12 left-[16%] right-[16%] h-0.5 bg-gradient-to-r from-sky-500/0 via-rose-400/50 to-sky-500/0 z-0"
      >
      </div>

      <div class="grid md:grid-cols-3 gap-8 relative z-10">
        <!-- Card 1: Sectores -->
        <div class="animate-item group">
          <div
            class="h-full p-8 rounded-2xl bg-[#0e2a3d]/60 border border-sky-800/50 backdrop-blur-sm hover:border-rose-400/40 transition-all duration-300 hover:shadow-[0_0_30px_rgba(251,113,133,0.15)]"
          >
            <div
              class="flex items-center justify-center w-12 h-12 rounded-xl bg-sky-900/50 text-sky-300 mb-6 group-hover:bg-rose-500/20 group-hover:text-rose-400 transition-colors"
            >
              <Icon name="lucide:factory" class="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Sectores Clave</h3>
            <ul class="space-y-3 text-sm text-gray-300">
              <li class="flex gap-2">
                <div
                  class="w-1.5 h-1.5 rounded-full bg-rose-400 mt-1.5 shrink-0"
                >
                </div>Industria Pesada y Minería
              </li>
              <li class="flex gap-2">
                <div
                  class="w-1.5 h-1.5 rounded-full bg-rose-400 mt-1.5 shrink-0"
                >
                </div>Sector Energético (Hidro/Eólico)
              </li>
              <li class="flex gap-2">
                <div
                  class="w-1.5 h-1.5 rounded-full bg-rose-400 mt-1.5 shrink-0"
                >
                </div>Ingeniería Civil e Infraestructura
              </li>
            </ul>
          </div>
        </div>

        <!-- Card 2: Personas (Focus) -->
        <div class="animate-item group md:-mt-8">
          <div
            class="h-full p-8 rounded-2xl bg-gradient-to-b from-[#132f45] to-[#0b2031] border border-rose-500/30 shadow-2xl relative overflow-hidden"
          >
            <div
              class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-rose-400 to-transparent opacity-50"
            >
            </div>
            <div
              class="flex items-center justify-center w-14 h-14 rounded-xl bg-rose-500/20 text-rose-300 mb-6 mx-auto"
            >
              <Icon name="lucide:users" class="w-7 h-7" />
            </div>
            <h3 class="text-2xl font-bold text-center text-white mb-2">
              ¿A quién ayudamos?
            </h3>
            <p class="text-center text-rose-200/80 text-sm mb-6">
              Expertos y Líderes Técnicos
            </p>

            <ul
              class="space-y-3 text-sm text-gray-300 border-t border-white/5 pt-6"
            >
              <li class="flex items-center gap-3">
                <Icon name="lucide:check" class="w-4 h-4 text-rose-400" /> Gerentes
                de Mantenimiento
              </li>
              <li class="flex items-center gap-3">
                <Icon name="lucide:check" class="w-4 h-4 text-rose-400" /> Ings. de
                Integridad Estructural
              </li>
              <li class="flex items-center gap-3">
                <Icon name="lucide:check" class="w-4 h-4 text-rose-400" /> Jefes de
                Planta
              </li>
              <li class="flex items-center gap-3">
                <Icon name="lucide:check" class="w-4 h-4 text-rose-400" /> Consultores
                Especializados
              </li>
            </ul>
          </div>
        </div>

        <!-- Card 3: Necesidades -->
        <div class="animate-item group">
          <div
            class="h-full p-8 rounded-2xl bg-[#0e2a3d]/60 border border-sky-800/50 backdrop-blur-sm hover:border-rose-400/40 transition-all duration-300 hover:shadow-[0_0_30px_rgba(251,113,133,0.15)]"
          >
            <div
              class="flex items-center justify-center w-12 h-12 rounded-xl bg-sky-900/50 text-sky-300 mb-6 group-hover:bg-rose-500/20 group-hover:text-rose-400 transition-colors"
            >
              <Icon name="lucide:target" class="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold text-white mb-4">
              ¿Qué Solucionamos?
            </h3>
            <ul class="space-y-3 text-sm text-gray-300">
              <li class="flex gap-2">
                <div
                  class="w-1.5 h-1.5 rounded-full bg-sky-400 mt-1.5 shrink-0"
                >
                </div>Monitoreo en zonas de difícil acceso
              </li>
              <li class="flex gap-2">
                <div
                  class="w-1.5 h-1.5 rounded-full bg-sky-400 mt-1.5 shrink-0"
                >
                </div>Software personalizado (Python/LabVIEW)
              </li>
              <li class="flex gap-2">
                <div
                  class="w-1.5 h-1.5 rounded-full bg-sky-400 mt-1.5 shrink-0"
                >
                </div>Análisis Modal Operacional (OMA)
              </li>
              <li class="flex gap-2">
                <div
                  class="w-1.5 h-1.5 rounded-full bg-sky-400 mt-1.5 shrink-0"
                >
                </div>Análisis de estrés en tiempo real
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Company History & Content -->
    <div class="grid md:grid-cols-2 gap-16 items-center mb-32">
      <div class="animate-item">
        <h2 class="text-3xl font-bold text-white mb-6 font-display">
          Nuestra Historia
        </h2>
        <div class="space-y-6 text-gray-400 leading-relaxed">
          <p>
            <strong class="text-white">IMBC S.A.C.</strong> es una compañía peruana
            con una sólida trayectoria de más de 10 años. Nos hemos consolidado como
            referentes en servicios para la minería e industrias energéticas en Sudamérica
            y más allá.
          </p>
          <div class="pl-4 border-l-2 border-rose-500/50 italic">
            "Conformados por analistas categoría II y III certificados por el
            Vibration Institute USA, garantizamos excelencia técnica bajo normas
            ISO y ANSI."
          </div>
          <p>
            Liderados por el Ingeniero Ciro Martínez Trinidad, instructor
            autorizado ASME, combinamos experiencia académica con soluciones
            prácticas de campo para resolver los desafíos más complejos de
            vibración.
          </p>
        </div>
      </div>
      <div class="animate-item relative group">
        <div
          class="absolute -inset-2 bg-gradient-to-r from-sky-500 to-rose-500 rounded-2xl opacity-20 blur-lg group-hover:opacity-40 transition duration-500"
        >
        </div>
        <Image
          src={image1}
          alt="Equipo MBC"
          class="relative rounded-2xl shadow-2xl w-full object-cover aspect-video"
          width={600}
          height={400}
        />
      </div>
    </div>

    <!-- Alta Gama Tech -->
    <div class="grid md:grid-cols-2 gap-16 items-center mb-32">
      <div class="animate-item md:order-2">
        <h2 class="text-3xl font-bold text-white mb-6 font-display">
          Tecnología de Vanguardia
        </h2>
        <p class="text-gray-400 leading-relaxed mb-6">
          No solo diagnosticamos; entendemos la física detrás de cada fallo.
          Utilizamos herramientas de última generación para:
        </p>
        <ul class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          {
            [
              "ODS & Slow Motion",
              "Análisis Modal (AME)",
              "Strain Gage & Torque",
              "Validación Elementos Finitos",
            ].map((item) => (
              <li class="flex items-center gap-2 bg-[#0e2a3d] px-4 py-3 rounded-lg border border-sky-900/50">
                <Icon name="lucide:cpu" class="w-4 h-4 text-rose-400" />
                <span class="text-sm font-medium">{item}</span>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="animate-item md:order-1 relative group">
        <div
          class="absolute -inset-2 bg-gradient-to-l from-sky-500 to-rose-500 rounded-2xl opacity-20 blur-lg group-hover:opacity-40 transition duration-500"
        >
        </div>
        <Image
          src={image2}
          alt="Tecnología Avanzada"
          class="relative rounded-2xl shadow-2xl w-full object-cover aspect-video"
          width={600}
          height={400}
        />
      </div>
    </div>

    <!-- Mission & Vision Cards -->
    <div class="grid md:grid-cols-2 gap-8 mb-32">
      <div
        class="animate-item bg-[#0b1d2e] p-10 rounded-3xl border border-sky-900/30 hover:border-sky-500/30 transition shadow-lg"
      >
        <Icon name="lucide:compass" class="w-10 h-10 text-sky-400 mb-6" />
        <h2 class="text-2xl font-bold text-white mb-4">Nuestra Misión</h2>
        <p class="text-gray-400 leading-relaxed">
          Innovar y difundir aplicaciones avanzadas en mantenimiento predictivo.
          Desde el análisis de vibraciones hasta la innovación en técnicas
          predictivas para equipos rotativos y estructuras críticas.
        </p>
      </div>
      <div
        class="animate-item bg-[#0b1d2e] p-10 rounded-3xl border border-sky-900/30 hover:border-rose-500/30 transition shadow-lg"
      >
        <Icon name="lucide:eye" class="w-10 h-10 text-rose-400 mb-6" />
        <h2 class="text-2xl font-bold text-white mb-4">Nuestra Visión</h2>
        <p class="text-gray-400 leading-relaxed">
          Ser la empresa líder indiscutible en Servicios de Ingeniería Dinámica,
          expandiendo nuestra excelencia técnica desde el mercado nacional hacia
          una presencia global creciente.
        </p>
      </div>
    </div>

    <!-- Values Compact -->
    <div
      class="max-w-5xl mx-auto rounded-3xl bg-gradient-to-r from-[#0d2335] via-[#0f293d] to-[#0d2335] p-12 border border-sky-900/30 text-center animate-item"
    >
      <h2 class="text-3xl font-bold text-white mb-12">Nuestros Pilares</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="flex flex-col items-center gap-3">
          <div class="p-4 rounded-full bg-sky-900/20 text-sky-400 mb-2">
            <Icon name="lucide:shield" class="w-6 h-6" />
          </div>
          <h3 class="font-bold text-white">Honestidad</h3>
        </div>
        <div class="flex flex-col items-center gap-3">
          <div class="p-4 rounded-full bg-rose-900/20 text-rose-400 mb-2">
            <Icon name="lucide:heart" class="w-6 h-6" />
          </div>
          <h3 class="font-bold text-white">Lealtad</h3>
        </div>
        <div class="flex flex-col items-center gap-3">
          <div class="p-4 rounded-full bg-sky-900/20 text-sky-400 mb-2">
            <Icon name="lucide:award" class="w-6 h-6" />
          </div>
          <h3 class="font-bold text-white">Excelencia</h3>
        </div>
        <div class="flex flex-col items-center gap-3">
          <div class="p-4 rounded-full bg-rose-900/20 text-rose-400 mb-2">
            <Icon name="lucide:zap" class="w-6 h-6" />
          </div>
          <h3 class="font-bold text-white">Innovación</h3>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-item {
    opacity: 0;
    transform: translateY(2rem);
    transition:
      opacity 0.8s ease-out,
      transform 0.8s ease-out;
  }
  .animate-item.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("is-visible");
        }
      });
    },
    { threshold: 0.1 },
  );

  document
    .querySelectorAll(".animate-item")
    .forEach((el) => observer.observe(el));
</script>
